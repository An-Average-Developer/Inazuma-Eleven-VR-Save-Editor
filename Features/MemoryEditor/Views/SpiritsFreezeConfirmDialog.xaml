<Window x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.SpiritsFreezeConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Extra Kenshins &amp; Hissatsus"
        Height="350"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="False">

    <materialDesign:Card UniformCornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <materialDesign:ColorZone Grid.Row="0"
                                     Mode="PrimaryMid"
                                     Padding="16"
                                     materialDesign:ElevationAssist.Elevation="Dp4">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="StarCircle"
                                           Width="32"
                                           Height="32"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                    <TextBlock Text="Extra Kenshins &amp; Hissatsus"
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </materialDesign:ColorZone>

            <StackPanel Grid.Row="1" Margin="30,20,30,20" VerticalAlignment="Center">
                <TextBlock Text="Do you want extra kenshins and hissatsus when summoning a player?"
                         FontSize="18"
                         FontWeight="SemiBold"
                         TextWrapping="Wrap"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         HorizontalAlignment="Center"
                         TextAlignment="Center"
                         Margin="0,0,0,20"/>

                <Border Background="{DynamicResource MaterialDesignDivider}"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="⚡ Activation Bonus:"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                 Margin="0,0,0,10"/>
                        <TextBlock FontSize="15"
                                 TextWrapping="Wrap"
                                 Foreground="{DynamicResource MaterialDesignBody}">
                            <Run Text="• "/>
                            <Run Text="6 extra hissatsus/kenshins" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <LineBreak/>
                            <Run Text="• "/>
                            <Run Text="Possibility to get random hissatsus/kenshins" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Grid Grid.Row="2" Margin="20,0,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                      Content="NO"
                      Click="NoButton_Click"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Height="45"
                      FontSize="16"
                      FontWeight="SemiBold"/>

                <Button Grid.Column="2"
                      Content="YES, ACTIVATE"
                      Click="YesButton_Click"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Height="45"
                      FontSize="16"
                      FontWeight="SemiBold"
                      Background="{DynamicResource PrimaryHueMidBrush}"
                      Foreground="White"/>
            </Grid>
        </Grid>
    </materialDesign:Card>
</Window>
