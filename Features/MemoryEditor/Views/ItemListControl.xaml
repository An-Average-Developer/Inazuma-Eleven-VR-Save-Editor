<UserControl x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.ItemListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <Button Command="{Binding MemoryEditor.BackToMenuCommand}"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,15"
                      Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChevronLeft"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Menu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Working on Items"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="These are the items that works with this option (This includes all the shop items, boxes and EXP Boosts)"
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Items List -->
        <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding MemoryEditor.WorkingItems}" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource MaterialDesignDivider}"
                                   CornerRadius="8"
                                   Margin="0,0,0,10"
                                   Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Item Image -->
                                    <Image Grid.Column="0"
                                          Source="{Binding ImagePath}"
                                          Width="48"
                                          Height="48"
                                          VerticalAlignment="Center"
                                          Margin="0,0,15,0"
                                          RenderOptions.BitmapScalingMode="HighQuality"/>

                                    <!-- Item Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Category}"
                                                 FontSize="13"
                                                 Opacity="0.7"/>
                                    </StackPanel>

                                    <!-- Status Icon -->
                                    <materialDesign:PackIcon Grid.Column="2"
                                                           Kind="CheckCircle"
                                                           Width="32"
                                                           Height="32"
                                                           Foreground="#4CAF50"
                                                           VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</UserControl>
