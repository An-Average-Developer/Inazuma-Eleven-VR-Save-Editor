<UserControl x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.StarsEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <Button Command="{Binding MemoryEditor.BackToMenuCommand}"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,15"
                      Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChevronLeft"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Menu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Stars Editor"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Edit star values and freeze stars in real-time. Make sure the game is closed before using these tools."
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
            <StackPanel>
                <Border Background="{DynamicResource MaterialDesignDivider}"
                       CornerRadius="8"
                       Margin="0,0,0,20">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Source="/Resources/Cards/Stars.png"
                               Width="32"
                               Height="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Current Status"
                                     FontSize="12"
                                     Opacity="0.7"/>
                            <TextBlock Text="{Binding MemoryEditor.StatusMessage}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="Click attach to connect to the game"
                                     FontSize="11"
                                     Opacity="0.6"
                                     Margin="0,5,0,0"
                                     FontStyle="Italic"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.AttachToProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#4CAF50">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Link"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Attach to Game"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.DetachFromProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#D32F2F"
                              Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LinkOff"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Detach"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Freeze Stars Toggle -->
                <Border Background="#4CAF50"
                       CornerRadius="8"
                       Margin="0,20,0,0"
                       Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0"
                                               Kind="Snowflake"
                                               Width="28"
                                               Height="28"
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"
                                               Foreground="White"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Freeze Stars"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            <TextBlock Text="Prevent stars from decreasing (unlimited stars)"
                                     FontSize="11"
                                     Foreground="White"
                                     Opacity="0.9"
                                     Margin="0,3,0,0"/>
                        </StackPanel>

                        <ToggleButton Grid.Column="2"
                                     IsChecked="{Binding MemoryEditor.IsStarsFrozen, Mode=OneWay}"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                     ToolTip="Toggle freeze on/off"
                                     Command="{Binding MemoryEditor.ToggleStarsFreezeCommand}"
                                     VerticalAlignment="Center"
                                     Margin="10,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Content Area with Left Panel -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Values List -->
                    <materialDesign:Card Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0" VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                <TextBlock Text="Game Values"
                                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                         Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding MemoryEditor.AutoRefresh}"
                                        IsEnabled="{Binding MemoryEditor.IsAttached}"
                                        Content="Auto-refresh (1s)"
                                        Style="{StaticResource MaterialDesignCheckBox}"/>
                            </StackPanel>

                            <!-- Values List -->
                            <ListBox Grid.Row="1"
                                   ItemsSource="{Binding MemoryEditor.StarsCollection}"
                                   SelectedItem="{Binding MemoryEditor.SelectedValue}"
                                   Style="{StaticResource MaterialDesignListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                   Height="60"
                                                   Margin="5">
                                            <!-- Star Image -->
                                            <Image Source="/Resources/Cards/Stars.png"
                                                   Width="60"
                                                   Height="60"
                                                   Stretch="Uniform"
                                                   VerticalAlignment="Center"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                                            <!-- Quantity Badge -->
                                            <Border Background="#E91E63"
                                                   CornerRadius="12"
                                                   Padding="8,4"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Counter"
                                                                           Width="16"
                                                                           Height="16"
                                                                           Foreground="White"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding CurrentValue}"
                                                             FontSize="16"
                                                             FontWeight="Bold"
                                                             Foreground="White"
                                                             VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Grid.Row="2"
                                  Command="{Binding MemoryEditor.RefreshValuesCommand}"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Margin="0,15,5,0"
                                  Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>
                                    <TextBlock Text="Refresh Now" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Right Panel - Editor -->
                    <materialDesign:Card Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,-10,0,0">
                        <Grid>
                            <Border Background="White"
                                   CornerRadius="8"
                                   Padding="20"
                                   Visibility="{Binding MemoryEditor.SelectedValue, Converter={StaticResource NullToVisibilityConverter}}"
                                   VerticalAlignment="Center">
                                <StackPanel>
                                    <!-- New Value Label -->
                                    <Border Background="White"
                                           CornerRadius="8"
                                           Padding="8,4"
                                           HorizontalAlignment="Left"
                                           Margin="0,0,0,10">
                                        <TextBlock Text="New Value"
                                                 FontSize="14"
                                                 FontWeight="SemiBold"
                                                 Foreground="Gray"/>
                                    </Border>

                                    <!-- New Value Input -->
                                    <TextBox Text="{Binding MemoryEditor.SelectedValue.NewValue, UpdateSourceTrigger=PropertyChanged}"
                                           Background="White"
                                           BorderBrush="Gray"
                                           BorderThickness="2"
                                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                           FontSize="24"
                                           Margin="0,0,0,30"
                                           Padding="15"/>

                                    <!-- Apply Button -->
                                    <Button Command="{Binding MemoryEditor.ApplyValueCommand}"
                                          Style="{StaticResource MaterialDesignRaisedButton}"
                                          Height="50">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Check"
                                                                   Width="24"
                                                                   Height="24"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,10,0"/>
                                            <TextBlock Text="Apply New Value"
                                                     VerticalAlignment="Center"
                                                     FontSize="16"
                                                     FontWeight="Medium"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- No Selection Placeholder -->
                            <StackPanel Visibility="{Binding MemoryEditor.SelectedValue, Converter={StaticResource InverseNullToVisibilityConverter}}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="CursorPointer"
                                                       Width="64"
                                                       Height="64"
                                                       HorizontalAlignment="Center"
                                                       Opacity="0.3"
                                                       Margin="0,0,0,20"/>
                                <TextBlock Text="Select a value from the list"
                                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                         Opacity="0.5"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Choose a value to view and edit it"
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Opacity="0.4"
                                         HorizontalAlignment="Center"
                                         Margin="0,10,0,0"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
