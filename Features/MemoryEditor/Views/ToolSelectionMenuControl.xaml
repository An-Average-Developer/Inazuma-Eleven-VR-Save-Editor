<UserControl x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.ToolSelectionMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Cheat Menu"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Select a tool to use. Make sure the game is closed before using these tools."
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>

                <!-- Quick Toggles Section -->
                <Border Background="{DynamicResource MaterialDesignDivider}"
                       CornerRadius="8"
                       Margin="0,10,0,0">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Source="/Resources/Cards/Stars.png"
                               Width="32"
                               Height="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Current Status"
                                     FontSize="12"
                                     Opacity="0.7"/>
                            <TextBlock Text="{Binding MemoryEditor.StatusMessage}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="Click attach to connect to the game"
                                     FontSize="11"
                                     Opacity="0.6"
                                     Margin="0,5,0,0"
                                     FontStyle="Italic"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.AttachToProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#4CAF50">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Link"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Attach to Game"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.DetachFromProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#D32F2F"
                              Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LinkOff"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Detach"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Freeze Items Toggle (Stars) -->
                <Border Background="#4CAF50"
                       CornerRadius="8"
                       Margin="0,10,0,0"
                       Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0"
                                               Kind="Snowflake"
                                               Width="28"
                                               Height="28"
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"
                                               Foreground="White"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Freeze Items"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            <TextBlock Text="Prevent items from decreasing (unlimited items)"
                                     FontSize="11"
                                     Foreground="White"
                                     Opacity="0.9"
                                     Margin="0,3,0,0"/>
                        </StackPanel>

                        <ToggleButton Grid.Column="2"
                                     IsChecked="{Binding MemoryEditor.IsStarsFrozen, Mode=OneWay}"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                     ToolTip="Toggle freeze on/off"
                                     Command="{Binding MemoryEditor.ToggleStarsFreezeCommand}"
                                     VerticalAlignment="Center"
                                     Margin="10,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Increment Items Toggle (Flowers) -->
                <Border Background="#FF9800"
                       CornerRadius="8"
                       Margin="0,10,0,0"
                       Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0"
                                               Kind="TrendingUp"
                                               Width="28"
                                               Height="28"
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"
                                               Foreground="White"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Increment Items on Use"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            <TextBlock Text="Items increase instead of decrease when buying"
                                     FontSize="11"
                                     Foreground="White"
                                     Opacity="0.9"
                                     Margin="0,3,0,0"/>
                        </StackPanel>

                        <ToggleButton Grid.Column="2"
                                     IsChecked="{Binding MemoryEditor.IsFlowersIncrementEnabled, Mode=OneWay}"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                     ToolTip="Toggle increment on/off"
                                     Command="{Binding MemoryEditor.ToggleFlowersIncrementCommand}"
                                     VerticalAlignment="Center"
                                     Margin="10,0,0,0"/>
                    </Grid>
                </Border>
            </StackPanel>
        </materialDesign:Card>

        <!-- Tool Selection Cards - IsEnabled="{Binding MemoryEditor.IsNotUnderMaintenance}" --> 
        <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="-10,-10,0,0" VerticalAlignment="Top" Background="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <!-- Star Editor Card -->
                <materialDesign:Card Style="{StaticResource CardStyle}"
                                   Margin="0"
                                   Padding="16,12,16,12"
                                   Width="180"
                                   MinHeight="170"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Cursor="Hand"
                                   MouseLeftButtonUp="TicketEditorCard_Click"
                                   IsEnabled="{Binding MemoryEditor.IsStarsEnabled}">
                    <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/Cards/Stars.png"
                               Width="48"
                               Height="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <TextBlock Text="Stars"
                                 FontSize="15"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="Edit gachapon stars"
                                 FontSize="11"
                                 Opacity="0.6"
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 Margin="8,0,8,8"/>

                        <Button Command="{Binding MemoryEditor.SelectTicketEditorCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="28"
                              Padding="12,0"
                              Margin="0,0,0,0"
                              Background="{DynamicResource SecondaryHueMidBrush}"
                              Foreground="Black">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChevronRight"
                                                       Width="14"
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="Open"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Maintenance Overlay -->
                    <Border Background="#CC808080"
                           CornerRadius="4"
                           Visibility="{Binding MemoryEditor.IsStarsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                           IsHitTestVisible="True">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Lock"
                                                   Width="48"
                                                   Height="48"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Opacity="0.9"/>
                            <TextBlock Text="UNDER"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,8,0,0"/>
                            <TextBlock Text="MAINTENANCE"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Ina Flowers Editor Card -->
                <materialDesign:Card Style="{StaticResource CardStyle}"
                                   Margin="10,0,0,0"
                                   Padding="16,12,16,12"
                                   Width="180"
                                   MinHeight="170"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Cursor="Hand"
                                   MouseLeftButtonUp="InaFlowersEditorCard_Click"
                                   IsEnabled="{Binding MemoryEditor.IsFlowersEnabled}">
                    <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/Cards/Inazuma Flower.png"
                               Width="48"
                               Height="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <TextBlock Text="Kizuna Flowers"
                                 FontSize="15"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="Edit Kizuna Flowers"
                                 FontSize="11"
                                 Opacity="0.6"
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 Margin="8,0,8,8"/>

                        <Button Command="{Binding MemoryEditor.SelectInaFlowersEditorCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="28"
                              Padding="12,0"
                              Margin="0,0,0,0"
                              Background="{DynamicResource SecondaryHueMidBrush}"
                              Foreground="Black">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChevronRight"
                                                       Width="14"
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="Open"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Maintenance Overlay -->
                    <Border Background="#CC808080"
                           CornerRadius="4"
                           Visibility="{Binding MemoryEditor.IsFlowersUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                           IsHitTestVisible="True">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Lock"
                                                   Width="48"
                                                   Height="48"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Opacity="0.9"/>
                            <TextBlock Text="UNDER"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,8,0,0"/>
                            <TextBlock Text="MAINTENANCE"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Spirits Editor Card -->
                <materialDesign:Card Style="{StaticResource CardStyle}"
                                   Margin="10,0,0,0"
                                   Padding="16,12,16,12"
                                   Width="180"
                                   MinHeight="170"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Cursor="Hand"
                                   MouseLeftButtonUp="SpiritsEditorCard_Click"
                                   IsEnabled="{Binding MemoryEditor.IsSpiritsEnabled}">
                    <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/Cards/Spirits.png"
                               Width="48"
                               Height="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <TextBlock Text="Spirits"
                                 FontSize="15"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="Edit Spirits"
                                 FontSize="11"
                                 Opacity="0.6"
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 Margin="8,0,8,8"/>

                        <Button Command="{Binding MemoryEditor.SelectSpiritsEditorCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="28"
                              Padding="12,0"
                              Margin="0,0,0,0"
                              Background="{DynamicResource SecondaryHueMidBrush}"
                              Foreground="Black">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChevronRight"
                                                       Width="14"
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="Open"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Maintenance Overlay -->
                    <Border Background="#CC808080"
                           CornerRadius="4"
                           Visibility="{Binding MemoryEditor.IsSpiritsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                           IsHitTestVisible="True">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Lock"
                                                   Width="48"
                                                   Height="48"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Opacity="0.9"/>
                            <TextBlock Text="UNDER"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,8,0,0"/>
                            <TextBlock Text="MAINTENANCE"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Beans Editor Card -->
                <materialDesign:Card Style="{StaticResource CardStyle}"
                                   Margin="10,0,0,0"
                                   Padding="16,12,16,12"
                                   Width="180"
                                   MinHeight="170"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Cursor="Hand"
                                   MouseLeftButtonUp="BeansEditorCard_Click"
                                   IsEnabled="{Binding MemoryEditor.IsBeansEnabled}">
                    <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/Cards/Kicking Power.png"
                               Width="48"
                               Height="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <TextBlock Text="Beans"
                                 FontSize="15"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="Edit Beans"
                                 FontSize="11"
                                 Opacity="0.6"
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 Margin="8,0,8,8"/>

                        <Button Command="{Binding MemoryEditor.SelectBeansEditorCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="28"
                              Padding="12,0"
                              Margin="0,0,0,0"
                              Background="{DynamicResource SecondaryHueMidBrush}"
                              Foreground="Black">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChevronRight"
                                                       Width="14"
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="Open"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Maintenance Overlay -->
                    <Border Background="#CC808080"
                           CornerRadius="4"
                           Visibility="{Binding MemoryEditor.IsBeansUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                           IsHitTestVisible="True">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Lock"
                                                   Width="48"
                                                   Height="48"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Opacity="0.9"/>
                            <TextBlock Text="UNDER"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,8,0,0"/>
                            <TextBlock Text="MAINTENANCE"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Victory Items Editor Card -->
                <materialDesign:Card Style="{StaticResource CardStyle}"
                                   Margin="10,0,0,0"
                                   Padding="16,12,16,12"
                                   Width="180"
                                   MinHeight="170"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Cursor="Hand"
                                   MouseLeftButtonUp="VictoryItemsEditorCard_Click"
                                   IsEnabled="{Binding MemoryEditor.IsVictoryItemsEnabled}">
                    <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/Cards/VSTAR.png"
                               Width="48"
                               Height="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <TextBlock Text="Victory Items"
                                 FontSize="15"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="Edit Victory Items"
                                 FontSize="11"
                                 Opacity="0.6"
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 Margin="8,0,8,8"/>

                        <Button Command="{Binding MemoryEditor.SelectVictoryItemsEditorCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="28"
                              Padding="12,0"
                              Margin="0,0,0,0"
                              Background="{DynamicResource SecondaryHueMidBrush}"
                              Foreground="Black">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChevronRight"
                                                       Width="14"
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="Open"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Maintenance Overlay -->
                    <Border Background="#CC808080"
                           CornerRadius="4"
                           Visibility="{Binding MemoryEditor.IsVictoryItemsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                           IsHitTestVisible="True">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Lock"
                                                   Width="48"
                                                   Height="48"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Opacity="0.9"/>
                            <TextBlock Text="UNDER"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,8,0,0"/>
                            <TextBlock Text="MAINTENANCE"
                                     FontSize="11"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
