                               IsHitTestVisible="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Lock"
                                                       Width="48"
                                                       Height="48"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       Opacity="0.9"/>
                                <TextBlock Text="MAINTENANCE"
                                         FontSize="11"
                                         FontWeight="Bold"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
