<UserControl x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.ToolSelectionMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <!-- Hover Effect Style for Option Borders -->
        <Style x:Key="OptionBorderHoverStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                   To="2" Duration="0:0:0.2"/>
                                <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                               To="White" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                   To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Cheat Menu"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Select a tool to use. Make sure the game is closed before using these tools."
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>

                <!-- Quick Toggles Section -->
                <Border Background="{DynamicResource MaterialDesignDivider}"
                       CornerRadius="8"
                       Margin="0,10,0,0">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Source="/Resources/Cards/Stars.png"
                               Width="32"
                               Height="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Current Status"
                                     FontSize="12"
                                     Opacity="0.7"/>
                            <TextBlock Text="{Binding MemoryEditor.StatusMessage}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="Click attach to connect to the game"
                                     FontSize="11"
                                     Opacity="0.6"
                                     Margin="0,5,0,0"
                                     FontStyle="Italic"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.AttachToProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#4CAF50">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Link"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Attach to Game"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.DetachFromProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#D32F2F"
                              Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LinkOff"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Detach"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Skip Story Toggle (Always Visible) -->
                <Border Background="{DynamicResource MaterialDesignDivider}"
                       CornerRadius="8"
                       Margin="0,10,0,0">
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                   Kind="BookOpenPageVariant"
                                   Width="32"
                                   Height="32"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Skip Story (Chronicle Mode)"
                                         FontSize="16"
                                         FontWeight="Bold"/>
                                <TextBlock Text="Skip the missions from the story and finish the match in the first half if you win"
                                         FontSize="11"
                                         Opacity="0.7"
                                         Margin="0,3,0,0"
                                         TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Credits and Information"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Click="SkipStoryInfo_Click">
                                <materialDesign:PackIcon Kind="InformationOutline"
                                                       Width="24"
                                                       Height="24"/>
                            </Button>

                            <ToggleButton Grid.Column="3"
                                        IsChecked="{Binding IsSkipStoryEnabled, Mode=OneWay}"
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        Command="{Binding ToggleSkipStoryCommand}"
                                        VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="âš  Restart the game when enabling or disabling this option. You can toggle this with the game closed."
                                 FontSize="10"
                                 Opacity="0.6"
                                 Margin="47,8,0,0"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </materialDesign:Card>

        <!-- Tool Selection Cards with ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="0,10,0,0">

                <!-- ITEMS SECTION -->
                <TextBlock Text="ITEMS"
                          FontSize="18"
                          FontWeight="Bold"
                          Margin="0,0,0,10"
                          Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <WrapPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <!-- Freeze Items Card -->
                    <materialDesign:Card Style="{StaticResource CardStyle}"
                                       Margin="0,0,10,10"
                                       Padding="16,12"
                                       Width="180"
                                       MinHeight="140"
                                       Visibility="{Binding MemoryEditor.IsFreezeItemsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Snowflake"
                                                   Width="40"
                                                   Height="40"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Freeze Items"
                                     FontSize="14"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Margin="0,0,0,8"/>
                            <ToggleButton IsChecked="{Binding MemoryEditor.IsStarsFrozen, Mode=OneWay}"
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        Command="{Binding MemoryEditor.ToggleStarsFreezeCommand}"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,8"/>
                            <Button Command="{Binding MemoryEditor.OpenTutorialsCommand}"
                                   CommandParameter="Freeze Items"
                                   Style="{StaticResource MaterialDesignIconButton}"
                                   Width="32"
                                   Height="32"
                                   Padding="0"
                                   ToolTip="Watch Tutorials">
                                <materialDesign:PackIcon Kind="Youtube"
                                                       Width="24"
                                                       Height="24"
                                                       Foreground="#FF0000"/>
                            </Button>
                        </StackPanel>
                        <!-- Maintenance Overlay -->
                        <Border Background="#CC808080"
                               CornerRadius="4"
                               Visibility="{Binding MemoryEditor.IsFreezeItemsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                               IsHitTestVisible="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Lock"
                                                       Width="48"
                                                       Height="48"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       Opacity="0.9"/>
                                <TextBlock Text="MAINTENANCE"
                                         FontSize="11"
                                         FontWeight="Bold"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Increment Items Card -->
                    <materialDesign:Card Style="{StaticResource CardStyle}"
                                       Margin="0,0,10,10"
                                       Padding="16,12"
                                       Width="180"
                                       MinHeight="140"
                                       Visibility="{Binding MemoryEditor.IsIncrementItemsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
