<UserControl x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.ToolSelectionMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <!-- Hover Effect Style for Option Borders -->
        <Style x:Key="OptionBorderHoverStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                   To="2" Duration="0:0:0.2"/>
                                <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                               To="White" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                   To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Cheat Menu"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Select a tool to use. Make sure the game is closed before using these tools."
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>

                <!-- Quick Toggles Section -->
                <Border Background="{DynamicResource MaterialDesignDivider}"
                       CornerRadius="8"
                       Margin="0,10,0,0">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Source="/Resources/Cards/Stars.png"
                               Width="32"
                               Height="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Current Status"
                                     FontSize="12"
                                     Opacity="0.7"/>
                            <TextBlock Text="{Binding MemoryEditor.StatusMessage}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="Click attach to connect to the game"
                                     FontSize="11"
                                     Opacity="0.6"
                                     Margin="0,5,0,0"
                                     FontStyle="Italic"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.AttachToProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#4CAF50">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Link"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Attach to Game"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.DetachFromProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#D32F2F"
                              Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LinkOff"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Detach"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Skip Story Toggle (Always Visible) -->
                <Border Background="{DynamicResource MaterialDesignDivider}"
                       CornerRadius="8"
                       Margin="0,10,0,0">
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                   Kind="BookOpenPageVariant"
                                   Width="32"
                                   Height="32"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Skip Story"
                                         FontSize="16"
                                         FontWeight="Bold"/>
                                <TextBlock Text="Skip the missions from the story and finish the match in the first half if you win"
                                         FontSize="11"
                                         Opacity="0.7"
                                         Margin="0,3,0,0"
                                         TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Credits and Information"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Click="SkipStoryInfo_Click">
                                <materialDesign:PackIcon Kind="InformationOutline"
                                                       Width="24"
                                                       Height="24"/>
                            </Button>

                            <ToggleButton Grid.Column="3"
                                        IsChecked="{Binding IsSkipStoryEnabled, Mode=OneWay}"
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        Command="{Binding ToggleSkipStoryCommand}"
                                        VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="âš  Restart the game when enabling or disabling this option. You can toggle this with the game closed."
                                 FontSize="10"
                                 Opacity="0.6"
                                 Margin="47,8,0,0"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                                <!-- Collapsible Sections: 2 per row -->
                <Grid Margin="0,10,0,0"
                      Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ITEMS Section (Top Left) -->
                    <Border Grid.Row="0" Grid.Column="0"
                           Background="#4CAF50"
                           CornerRadius="8"
                           VerticalAlignment="Top">
                    <Expander Background="Transparent"
                             IsExpanded="False">
                        <Expander.Header>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0"
                                                       Kind="Package"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"
                                                       Foreground="White"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="ITEMS"
                                             FontSize="15"
                                             FontWeight="Bold"
                                             Foreground="White"/>
                                    <TextBlock Text="Search cheats for items"
                                             FontSize="10"
                                             Foreground="White"
                                             Opacity="0.9"/>
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <StackPanel Margin="10" Background="Transparent">
                            <!-- Freeze Items -->
                            <Grid Margin="0,0,0,8">
                            <Border Background="#4CAF50"
                                   Style="{StaticResource OptionBorderHoverStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="Snowflake"
                                                           Width="20"
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"
                                                           Foreground="White"/>
                                    <TextBlock Grid.Column="1"
                                             Text="Freeze Items"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="2"
                                                 IsChecked="{Binding MemoryEditor.IsStarsFrozen, Mode=OneWay}"
                                                 Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                 Command="{Binding MemoryEditor.ToggleStarsFreezeCommand}"/>
                                </Grid>
                            </Border>

                            <!-- Maintenance Overlay -->
                            <Border Background="#CC808080"
                                   CornerRadius="5"
                                   Visibility="{Binding MemoryEditor.IsFreezeItemsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   IsHitTestVisible="True">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                                    <materialDesign:PackIcon Kind="Lock"
                                                           Width="18"
                                                           Height="18"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           Opacity="0.9"/>
                                    <TextBlock Text="MAINTENANCE"
                                             FontSize="8"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                            </Grid>

                            <!-- Increment Items -->
                            <StackPanel Margin="0,0,0,8">
                            <Border Background="#FF9800"
                                   Style="{StaticResource OptionBorderHoverStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="TrendingUp"
                                                           Width="20"
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"
                                                           Foreground="White"/>
                                    <TextBlock Grid.Column="1"
                                             Text="Increment Items on Use"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="2"
                                                 IsChecked="{Binding MemoryEditor.IsFlowersIncrementEnabled, Mode=OneWay}"
                                                 Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                 Command="{Binding MemoryEditor.ToggleFlowersIncrementCommand}"/>
                                </Grid>
                            </Border>

                            <!-- Maintenance Overlay -->
                            <Border Background="#CC808080"
                                   CornerRadius="5"
                                   Visibility="{Binding MemoryEditor.IsIncrementItemsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   IsHitTestVisible="True">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                                    <materialDesign:PackIcon Kind="Lock"
                                                           Width="18"
                                                           Height="18"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           Opacity="0.9"/>
                                    <TextBlock Text="MAINTENANCE"
                                             FontSize="8"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                            </StackPanel>

                            <!-- Store Item Multiplier -->
                            <Grid>
                            <Border Background="#F44336"
                                   Style="{StaticResource OptionBorderHoverStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="Multiplication"
                                                           Width="20"
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"
                                                           Foreground="White"/>
                                    <TextBlock Grid.Column="1"
                                             Text="Store Item Multiplier x2457"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="2"
                                                 IsChecked="{Binding MemoryEditor.IsStoreItemMultiplierEnabled, Mode=OneWay}"
                                                 Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                 Command="{Binding MemoryEditor.ToggleStoreItemMultiplierCommand}"/>
                                </Grid>
                            </Border>

                            <!-- Maintenance Overlay -->
                            <Border Background="#CC808080"
                                   CornerRadius="5"
                                   Visibility="{Binding MemoryEditor.IsStoreMultiplierUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   IsHitTestVisible="True">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                                    <materialDesign:PackIcon Kind="Lock"
                                                           Width="18"
                                                           Height="18"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           Opacity="0.9"/>
                                    <TextBlock Text="MAINTENANCE"
                                             FontSize="8"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                            </Grid>
                        </StackPanel>
                    </Expander>
                    </Border>

                    <!-- SPIRITS Section (Top Right) -->
                    <Border Grid.Row="0" Grid.Column="2"
                           Background="#9C27B0"
                           CornerRadius="8"
                           VerticalAlignment="Top">
                    <Expander Background="Transparent"
                             IsExpanded="False">
                        <Expander.Header>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0"
                                                       Kind="AutoFix"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"
                                                       Foreground="White"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="SPIRITS"
                                             FontSize="15"
                                             FontWeight="Bold"
                                             Foreground="White"/>
                                    <TextBlock Text="Search cheats for spirits"
                                             FontSize="10"
                                             Foreground="White"
                                             Opacity="0.9"/>
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <StackPanel Margin="10" Background="Transparent">
                            <!-- Freeze Spirits -->
                            <Grid Margin="0,0,0,8">
                            <Border Background="#9C27B0"
                                   Style="{StaticResource OptionBorderHoverStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="Snowflake"
                                                           Width="20"
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"
                                                           Foreground="White"/>
                                    <TextBlock Grid.Column="1"
                                             Text="Freeze Spirits"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="2"
                                                 IsChecked="{Binding MemoryEditor.IsSpiritsFrozen, Mode=OneWay}"
                                                 Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                 Command="{Binding MemoryEditor.ToggleSpiritsFreezeCommand}"/>
                                </Grid>
                            </Border>

                            <!-- Maintenance Overlay -->
                            <Border Background="#CC808080"
                                   CornerRadius="5"
                                   Visibility="{Binding MemoryEditor.IsFreezeSpiritsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   IsHitTestVisible="True">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                                    <materialDesign:PackIcon Kind="Lock"
                                                           Width="18"
                                                           Height="18"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           Opacity="0.9"/>
                                    <TextBlock Text="MAINTENANCE"
                                             FontSize="8"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                            </Grid>

                            <!-- Increment Spirits -->
                            <Grid>
                            <Border Background="#2196F3"
                                   Style="{StaticResource OptionBorderHoverStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="PlusCircle"
                                                           Width="20"
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"
                                                           Foreground="White"/>
                                    <TextBlock Grid.Column="1"
                                             Text="Increment Spirits on Use (ONLY HERO AND FABLED SPIRITS)"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="2"
                                                 IsChecked="{Binding MemoryEditor.IsSpiritIncrementEnabled, Mode=OneWay}"
                                                 Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                 Command="{Binding MemoryEditor.ToggleSpiritIncrementCommand}"/>
                                </Grid>
                            </Border>

                            <!-- Maintenance Overlay -->
                            <Border Background="#CC808080"
                                   CornerRadius="5"
                                   Visibility="{Binding MemoryEditor.IsIncrementSpiritsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   IsHitTestVisible="True">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                                    <materialDesign:PackIcon Kind="Lock"
                                                           Width="18"
                                                           Height="18"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           Opacity="0.9"/>
                                    <TextBlock Text="MAINTENANCE"
                                             FontSize="8"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                            </Grid>
                        </StackPanel>
                    </Expander>
                    </Border>

                    <!-- SPIRIT MARKET Section (Middle Right) -->
                    <Border Grid.Row="1" Grid.Column="2"
                           Background="#4CAF50"
                           CornerRadius="8"
                           Margin="0,10,0,0"
                           VerticalAlignment="Top">
                    <Expander Background="Transparent"
                             IsExpanded="False">
                        <Expander.Header>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0"
                                                       Kind="ShoppingOutline"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"
                                                       Foreground="White"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="SPIRIT MARKET"
                                             FontSize="15"
                                             FontWeight="Bold"
                                             Foreground="White"/>
                                    <TextBlock Text="Free spirit purchases and quantity boost"
                                             FontSize="10"
                                             Foreground="White"
                                             Opacity="0.9"/>
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <StackPanel Margin="10" Background="Transparent">
                            <!-- Free Buy Spirit Market -->
                            <Grid Margin="0,0,0,8">
                            <Border Background="#4CAF50"
                                   Style="{StaticResource OptionBorderHoverStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="CurrencyUsd"
                                                           Width="20"
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"
                                                           Foreground="White"/>
                                    <TextBlock Grid.Column="1"
                                             Text="Free Buy Spirit Market"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="2"
                                                 IsChecked="{Binding MemoryEditor.IsFreeBuySpiritMarketEnabled, Mode=OneWay}"
                                                 Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                 Command="{Binding MemoryEditor.ToggleFreeBuySpiritMarketCommand}"/>
                                </Grid>
                            </Border>
                            </Grid>
                        </StackPanel>
                    </Expander>
                    </Border>

                    <!-- TEAM BUILDER Section (Bottom Left) -->
                    <Border Grid.Row="1" Grid.Column="0"
                           Background="#FFC107"
                           CornerRadius="8"
                           Margin="0,10,0,0"
                           VerticalAlignment="Top">
                    <Expander Background="Transparent"
                             IsExpanded="False">
                        <Expander.Header>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0"
                                                       Kind="AccountGroup"
                                                       Width="24"
                                                       Height="24"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"
                                                       Foreground="White"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="TEAM BUILDER"
                                             FontSize="15"
                                             FontWeight="Bold"
                                             Foreground="White"/>
                                    <TextBlock Text="Team configuration cheats"
                                             FontSize="10"
                                             Foreground="White"
                                             Opacity="0.9"/>
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <StackPanel Margin="10" Background="Transparent">
                            <!-- Unlimited Heroes -->
                            <Grid Margin="0,0,0,8">
                            <Border Background="#FFC107"
                                   Style="{StaticResource OptionBorderHoverStyle}">
                                <Grid Margin="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="AccountGroup"
                                                           Width="20"
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"
                                                           Foreground="White"/>
                                    <TextBlock Grid.Column="1"
                                             Text="Unlimited Heroes in Team"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="2"
                                                 IsChecked="{Binding MemoryEditor.IsUnlimitedHeroesEnabled, Mode=OneWay}"
                                                 Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                 Command="{Binding MemoryEditor.ToggleUnlimitedHeroesCommand}"/>
                                </Grid>
                            </Border>

                            <!-- Maintenance Overlay -->
                            <Border Background="#CC808080"
                                   CornerRadius="5"
                                   Visibility="{Binding MemoryEditor.IsUnlimitedHeroesUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   IsHitTestVisible="True">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                                    <materialDesign:PackIcon Kind="Lock"
                                                           Width="18"
                                                           Height="18"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           Opacity="0.9"/>
                                    <TextBlock Text="MAINTENANCE"
                                             FontSize="8"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                            </Grid>

                            <!-- Player Level -->
                            <Grid>
                            <Border Background="#4CAF50" Margin="0,8,0,0"
                                   Style="{StaticResource OptionBorderHoverStyle}">
                                <StackPanel Margin="12">
                                    <!-- Toggle Row -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="Star"
                                                               Width="20"
                                                               Height="20"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"
                                                               Foreground="White"/>
                                        <TextBlock Grid.Column="1"
                                                 Text="Player Level"
                                                 FontSize="13"
                                                 FontWeight="SemiBold"
                                                 Foreground="White"
                                                 VerticalAlignment="Center"/>
                                        <ToggleButton Grid.Column="2"
                                                     IsChecked="{Binding MemoryEditor.IsPlayerLevelEnabled, Mode=OneWay}"
                                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                     Command="{Binding MemoryEditor.TogglePlayerLevelCommand}"/>
                                    </Grid>

                                    <!-- Input Row (visible when enabled) -->
                                    <Grid Margin="0,8,0,0"
                                         Visibility="{Binding MemoryEditor.ShowPlayerLevelInput, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                Text="{Binding MemoryEditor.PlayerLevelInput, UpdateSourceTrigger=PropertyChanged}"
                                                materialDesign:HintAssist.Hint="Level (1-99)"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                Foreground="White"
                                                Margin="0,0,8,0"
