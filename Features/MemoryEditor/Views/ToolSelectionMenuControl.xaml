                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="on Use"
                                     FontSize="12"
                                     Opacity="0.7"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Margin="0,0,0,8"/>
                            <ToggleButton IsChecked="{Binding MemoryEditor.IsFlowersIncrementEnabled, Mode=OneWay}"
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        Command="{Binding MemoryEditor.ToggleFlowersIncrementCommand}"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,8"/>
                            <Button Command="{Binding MemoryEditor.OpenTutorialsCommand}"
                                   CommandParameter="Increment Items"
