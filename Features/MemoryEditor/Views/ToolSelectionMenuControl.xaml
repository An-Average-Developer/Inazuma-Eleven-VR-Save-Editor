                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Margin="0,0,0,0"/>
                            <TextBlock Text="Multiplier x2457"
                                     FontSize="12"
                                     Opacity="0.7"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Margin="0,0,0,8"/>
                            <ToggleButton IsChecked="{Binding MemoryEditor.IsStoreItemMultiplierEnabled, Mode=OneWay}"
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        Command="{Binding MemoryEditor.ToggleStoreItemMultiplierCommand}"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,8"/>
                            <Button Command="{Binding MemoryEditor.OpenTutorialsCommand}"
                                   CommandParameter="Store Item Multiplier"
                                   Style="{StaticResource MaterialDesignIconButton}"
                                   Width="32"
                                   Height="32"
                                   Padding="0"
                                   ToolTip="Watch Tutorials">
                                <materialDesign:PackIcon Kind="Youtube"
                                                       Width="24"
                                                       Height="24"
                                                       Foreground="#FF0000"/>
                            </Button>
                        </StackPanel>
                        <!-- Maintenance Overlay -->
                        <Border Background="#CC808080"
                               CornerRadius="4"
                               Visibility="{Binding MemoryEditor.IsStoreMultiplierUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                               IsHitTestVisible="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Lock"
                                                       Width="48"
                                                       Height="48"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       Opacity="0.9"/>
                                <TextBlock Text="MAINTENANCE"
                                         FontSize="11"
                                         FontWeight="Bold"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Star Editor Card -->
                    <materialDesign:Card Style="{StaticResource CardStyle}"
                                       Margin="0,0,10,10"
                                       Padding="16,12,16,12"
                                       Width="180"
                                       MinHeight="170"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="TicketEditorCard_Click"
                                       IsEnabled="{Binding MemoryEditor.IsStarsEnabled}"
                                       Visibility="{Binding MemoryEditor.IsStarsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/Resources/Cards/Stars.png"
                                   Width="48"
                                   Height="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Stars"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="Edit gachapon stars"
                                     FontSize="11"
                                     Opacity="0.6"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Margin="8,0,8,8"/>
                            <Button Command="{Binding MemoryEditor.SelectTicketEditorCommand}"
                                  Style="{StaticResource MaterialDesignRaisedButton}"
                                  Height="28"
                                  Padding="12,0"
                                  Background="{DynamicResource SecondaryHueMidBrush}"
                                  Foreground="Black">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChevronRight" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="Open" FontSize="11" VerticalAlignment="Center" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Border Background="#CC808080" CornerRadius="4" Visibility="{Binding MemoryEditor.IsStarsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Lock" Width="48" Height="48" Foreground="White" HorizontalAlignment="Center" Opacity="0.9"/>
                                <TextBlock Text="UNDER" FontSize="12" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBlock Text="MAINTENANCE" FontSize="11" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Kizuna Flowers Editor Card -->
                    <materialDesign:Card Style="{StaticResource CardStyle}"
                                       Margin="0,0,10,10"
                                       Padding="16,12,16,12"
                                       Width="180"
                                       MinHeight="170"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="InaFlowersEditorCard_Click"
                                       IsEnabled="{Binding MemoryEditor.IsFlowersEnabled}"
                                       Visibility="{Binding MemoryEditor.IsFlowersVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/Resources/Cards/Inazuma Flower.png"
                                   Width="48"
                                   Height="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Kizuna Flowers"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="Edit Kizuna Flowers"
                                     FontSize="11"
                                     Opacity="0.6"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Margin="8,0,8,8"/>
                            <Button Command="{Binding MemoryEditor.SelectInaFlowersEditorCommand}"
                                  Style="{StaticResource MaterialDesignRaisedButton}"
                                  Height="28"
                                  Padding="12,0"
                                  Background="{DynamicResource SecondaryHueMidBrush}"
                                  Foreground="Black">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChevronRight" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="Open" FontSize="11" VerticalAlignment="Center" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Border Background="#CC808080" CornerRadius="4" Visibility="{Binding MemoryEditor.IsFlowersUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Lock" Width="48" Height="48" Foreground="White" HorizontalAlignment="Center" Opacity="0.9"/>
                                <TextBlock Text="UNDER" FontSize="12" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBlock Text="MAINTENANCE" FontSize="11" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Beans Editor Card -->
                    <materialDesign:Card Style="{StaticResource CardStyle}"
                                       Margin="0,0,10,10"
                                       Padding="16,12,16,12"
                                       Width="180"
                                       MinHeight="170"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="BeansEditorCard_Click"
                                       IsEnabled="{Binding MemoryEditor.IsBeansEnabled}"
                                       Visibility="{Binding MemoryEditor.IsBeansVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/Resources/Cards/Kicking Power.png"
                                   Width="48"
                                   Height="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Beans"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="Edit Beans"
                                     FontSize="11"
                                     Opacity="0.6"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Margin="8,0,8,8"/>
                            <Button Command="{Binding MemoryEditor.SelectBeansEditorCommand}"
                                  Style="{StaticResource MaterialDesignRaisedButton}"
                                  Height="28"
                                  Padding="12,0"
                                  Background="{DynamicResource SecondaryHueMidBrush}"
                                  Foreground="Black">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChevronRight" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="Open" FontSize="11" VerticalAlignment="Center" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Border Background="#CC808080" CornerRadius="4" Visibility="{Binding MemoryEditor.IsBeansUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Lock" Width="48" Height="48" Foreground="White" HorizontalAlignment="Center" Opacity="0.9"/>
                                <TextBlock Text="UNDER" FontSize="12" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBlock Text="MAINTENANCE" FontSize="11" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Victory Items Editor Card -->
                    <materialDesign:Card Style="{StaticResource CardStyle}"
                                       Margin="0,0,10,10"
                                       Padding="16,12,16,12"
                                       Width="180"
                                       MinHeight="170"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="VictoryItemsEditorCard_Click"
                                       IsEnabled="{Binding MemoryEditor.IsVictoryItemsEnabled}"
                                       Visibility="{Binding MemoryEditor.IsVictoryItemsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/Resources/Cards/VSTAR.png"
                                   Width="48"
                                   Height="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Victory Items"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="Edit Victory Items"
                                     FontSize="11"
                                     Opacity="0.6"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Margin="8,0,8,8"/>
                            <Button Command="{Binding MemoryEditor.SelectVictoryItemsEditorCommand}"
                                  Style="{StaticResource MaterialDesignRaisedButton}"
                                  Height="28"
                                  Padding="12,0"
                                  Background="{DynamicResource SecondaryHueMidBrush}"
                                  Foreground="Black">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChevronRight" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="Open" FontSize="11" VerticalAlignment="Center" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Border Background="#CC808080" CornerRadius="4" Visibility="{Binding MemoryEditor.IsVictoryItemsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Lock" Width="48" Height="48" Foreground="White" HorizontalAlignment="Center" Opacity="0.9"/>
                                <TextBlock Text="UNDER" FontSize="12" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBlock Text="MAINTENANCE" FontSize="11" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        </Grid>
                    </materialDesign:Card>
                </WrapPanel>

                <!-- SPIRITS SECTION -->
                <TextBlock Text="SPIRITS"
                          FontSize="18"
                          FontWeight="Bold"
                          Margin="0,10,0,10"
                          Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <WrapPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <!-- Freeze Spirits Card -->
                    <materialDesign:Card Style="{StaticResource CardStyle}"
                                       Margin="0,0,10,10"
                                       Padding="16,12"
                                       Width="180"
                                       MinHeight="140"
                                       Visibility="{Binding MemoryEditor.IsFreezeSpiritsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Snowflake"
                                                   Width="40"
                                                   Height="40"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Freeze Spirits"
                                     FontSize="14"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Margin="0,0,0,8"/>
                            <ToggleButton IsChecked="{Binding MemoryEditor.IsSpiritsFrozen, Mode=OneWay}"
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        Command="{Binding MemoryEditor.ToggleSpiritsFreezeCommand}"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,8"/>
                            <Button Command="{Binding MemoryEditor.OpenTutorialsCommand}"
                                   CommandParameter="Freeze Spirits"
                                   Style="{StaticResource MaterialDesignIconButton}"
                                   Width="32"
                                   Height="32"
                                   Padding="0"
                                   ToolTip="Watch Tutorials">
                                <materialDesign:PackIcon Kind="Youtube"
                                                       Width="24"
                                                       Height="24"
                                                       Foreground="#FF0000"/>
                            </Button>
                        </StackPanel>
                        <!-- Maintenance Overlay -->
                        <Border Background="#CC808080"
                               CornerRadius="4"
                               Visibility="{Binding MemoryEditor.IsFreezeSpiritsUnderMaintenance, Converter={StaticResource BooleanToVisibilityConverter}}"
                               IsHitTestVisible="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
