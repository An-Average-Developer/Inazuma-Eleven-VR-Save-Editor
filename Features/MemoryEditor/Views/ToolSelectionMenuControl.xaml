                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Multiplication"
                                                   Width="40"
                                                   Height="40"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
