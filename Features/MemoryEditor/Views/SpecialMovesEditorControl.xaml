<UserControl x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.SpecialMovesEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <Button Command="{Binding MemoryEditor.BackToMenuCommand}"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,15"
                      Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChevronLeft"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Menu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Special Moves Editor"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Edit special move values in real-time. Open the Abilearn Board in the game to capture move addresses. Make sure the game is running and you are attached to the process."
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="0,0,0,20">
                <Border Background="{DynamicResource MaterialDesignDivider}"
                       CornerRadius="8"
                       Margin="0,0,0,20">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Source="/Resources/Cards/Pasivas.png"
                               Width="32"
                               Height="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Current Status"
                                     FontSize="12"
                                     Opacity="0.7"/>
                            <TextBlock Text="{Binding MemoryEditor.StatusMessage}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="Click attach to connect to the game"
                                     FontSize="11"
                                     Opacity="0.6"
                                     Margin="0,5,0,0"
                                     FontStyle="Italic"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.AttachToProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#4CAF50">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Link"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Attach to Game"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                              Command="{Binding MemoryEditor.DetachFromProcessCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="45"
                              VerticalAlignment="Center"
                              Background="#D32F2F"
                              Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LinkOff"
                                                       Width="20"
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Detach"
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Enable Special Move Editing Toggle -->
                <Border Background="#FF5722"
                       CornerRadius="8"
                       Margin="0,20,0,0"
                       Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0"
                                               Kind="Sword"
                                               Width="28"
                                               Height="28"
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"
                                               Foreground="White"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Enable Special Move Editing"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            <TextBlock Text="Inject code to edit special move values in Abilearn Board"
                                     FontSize="11"
                                     Foreground="White"
                                     Opacity="0.9"
                                     Margin="0,3,0,0"/>
                        </StackPanel>

                        <ToggleButton Grid.Column="2"
                                     IsChecked="{Binding MemoryEditor.IsSpecialMoveTypeEditingEnabled, Mode=OneWay}"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                     ToolTip="Toggle special move editing on/off"
                                     Command="{Binding MemoryEditor.ToggleSpecialMoveTypeEditingCommand}"
                                     VerticalAlignment="Center"
                                     Margin="10,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Content Area - Special Move Slots -->
                <Grid Margin="0,20,0,0" Visibility="{Binding MemoryEditor.IsSpecialMoveTypeEditingEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <materialDesign:Card Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Special Move Slots"
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Open the Abilearn Board in the game. Move addresses will be captured automatically when available. Select a move from the dropdown or filter by category."
                                     Style="{StaticResource MaterialDesignBody2TextBlock}"
                                     Opacity="0.7"
                                     TextWrapping="Wrap"
                                     Margin="0,0,0,15"/>

                            <!-- Category Filter -->
                            <Border Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Filter by Category:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,15,0"/>
                                    <ComboBox ItemsSource="{Binding MemoryEditor.AvailableMoveCategories}"
                                              SelectedItem="{Binding MemoryEditor.SelectedMoveCategory}"
                                              Width="200"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Select category..."/>
                                    <TextBlock Text="{Binding MemoryEditor.FilteredSpecialMoves.Count, StringFormat='{}{0} moves'}"
                                               VerticalAlignment="Center"
                                               Opacity="0.7"
                                               Margin="15,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Slot 0 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Main Move (r8d=0)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue0}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove0}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue0}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="0"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue0}"/>
                                </Grid>
                            </Border>

                            <!-- Slot 1 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Slot 2 (r8d=2)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue1}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove1}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue1}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="1"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue1}"/>
                                </Grid>
                            </Border>

                            <!-- Slot 2 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Slot 3 (r8d=4)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue2}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove2}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue2}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="2"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue2}"/>
                                </Grid>
                            </Border>

                            <!-- Slot 3 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Slot 4 (r8d=8/9)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue3}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove3}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue3}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="3"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue3}"/>
                                </Grid>
                            </Border>

                            <!-- Slot 4 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Slot 5 (r8d=A/B)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue4}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove4}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue4}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="4"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue4}"/>
                                </Grid>
                            </Border>

                            <!-- Slot 5 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Slot 6 (r8d=C/D)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue5}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove5}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue5}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="5"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue5}"/>
                                </Grid>
                            </Border>

                            <!-- Slot 6 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Slot 7 (r8d=13)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue6}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove6}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue6}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="6"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue6}"/>
                                </Grid>
                            </Border>

                            <!-- Slot 7 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Slot 8 (r8d=15)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue7}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove7}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue7}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="7"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue7}"/>
                                </Grid>
                            </Border>

                            <!-- Slot 8 -->
                            <Border Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Slot 9 (r8d=17)" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="{Binding MemoryEditor.SpecialMoveCurrentValue8}" FontWeight="Bold" Margin="0,5,0,0" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding MemoryEditor.FilteredSpecialMoves}"
                                              SelectedItem="{Binding MemoryEditor.SelectedSpecialMove8}"
                                              DisplayMemberPath="DisplayName"
                                              Width="280" Margin="10,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue8}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"
                                              materialDesign:HintAssist.Hint="Select or search move..."/>
                                    <Button Grid.Column="2" Content="Apply" Command="{Binding MemoryEditor.ApplySpecialMoveValueCommand}" CommandParameter="8"
                                          Style="{StaticResource MaterialDesignRaisedButton}" IsEnabled="{Binding MemoryEditor.HasSpecialMoveValue8}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</UserControl>
