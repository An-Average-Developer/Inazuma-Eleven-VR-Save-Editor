<UserControl x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.TutorialsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Video List View -->
        <Grid x:Name="VideoListView" Visibility="{Binding IsPlayingVideo, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0"
                                       Kind="Youtube"
                                       Width="32"
                                       Height="32"
                                       Foreground="#FF0000"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TutorialTitle, FallbackValue='Tutorials'}"
                             FontSize="20"
                             FontWeight="Bold"
                             Foreground="White"/>
                    <TextBlock Text="Video Tutorials"
                             FontSize="12"
                             Foreground="#AAAAAA"
                             Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="2"
                       Command="{Binding CloseCommand, FallbackValue={x:Null}}"
                       Style="{StaticResource MaterialDesignIconButton}"
                       ToolTip="Back to Menu">
                    <materialDesign:PackIcon Kind="ArrowLeft"
                                           Width="24"
                                           Height="24"
                                           Foreground="White"/>
                </Button>
            </Grid>
        </Border>

        <!-- Video List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <ItemsControl ItemsSource="{Binding VideoFiles, FallbackValue={x:Null}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,15,15"
                                           Width="320"
                                           Height="240"
                                           Cursor="Hand"
                                           MouseLeftButtonUp="VideoCard_Click">
                            <materialDesign:Card.Tag>
                                <Binding Path="FilePath"/>
                            </materialDesign:Card.Tag>
                            <Grid>
                                <!-- Video Preview/Thumbnail -->
                                <Border Background="#2D2D30">
                                    <Grid>
                                        <!-- Thumbnail Image (if available) -->
                                        <Image Source="{Binding Thumbnail}"
                                              Stretch="UniformToFill"/>

                                        <!-- Video Icon as placeholder (always visible as fallback) -->
                                        <materialDesign:PackIcon Kind="Video"
                                                               Width="80"
                                                               Height="80"
                                                               Foreground="#555555"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Opacity="0.3"/>

                                        <!-- Play Button Overlay -->
                                        <Border Background="#80000000"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               CornerRadius="40"
                                               Width="80"
                                               Height="80">
                                            <materialDesign:PackIcon Kind="PlayCircle"
                                                                   Width="60"
                                                                   Height="60"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Video Info -->
                                <Border Background="#E0000000"
                                       VerticalAlignment="Bottom"
                                       Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="{Binding FileName}"
                                                 FontSize="14"
                                                 FontWeight="SemiBold"
                                                 Foreground="White"
                                                 TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding FileSize}"
                                                 FontSize="11"
                                                 Foreground="#AAAAAA"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- No Videos Message -->
        <StackPanel Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding NoVideosVisible, FallbackValue=Collapsed}">
            <materialDesign:PackIcon Kind="VideoOff"
                                   Width="80"
                                   Height="80"
                                   Foreground="#555555"
                                   HorizontalAlignment="Center"/>
            <TextBlock Text="No tutorial videos found"
                     FontSize="16"
                     Foreground="#AAAAAA"
                     HorizontalAlignment="Center"
                     Margin="0,16,0,0"/>
        </StackPanel>
        </Grid>

        <!-- Video Player View -->
        <Grid x:Name="VideoPlayerView" Visibility="{Binding IsPlayingVideo, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Player Header -->
            <Border Grid.Row="0" Background="#2D2D30" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                           Command="{Binding StopVideoCommand}"
                           Style="{StaticResource MaterialDesignIconButton}"
                           ToolTip="Back to Video List">
                        <materialDesign:PackIcon Kind="ArrowLeft"
                                               Width="24"
                                               Height="24"
                                               Foreground="White"/>
                    </Button>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock Text="{Binding CurrentVideoTitle, FallbackValue='Video Player'}"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Video Player -->
            <Border Grid.Row="1" Background="Black" Margin="20">
                <MediaElement x:Name="VideoPlayer"
                            Source="{Binding CurrentVideoPath}"
                            LoadedBehavior="Manual"
                            UnloadedBehavior="Stop"
                            Stretch="Uniform"
                            MediaOpened="VideoPlayer_MediaOpened"
                            MediaEnded="VideoPlayer_MediaEnded"/>
            </Border>

            <!-- Video Controls -->
            <Border Grid.Row="2" Background="#2D2D30" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress Bar -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                 Text="{Binding CurrentTime, FallbackValue='00:00'}"
                                 Foreground="White"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>

                        <Slider Grid.Column="1"
                               x:Name="TimelineSlider"
                               Minimum="0"
                               Maximum="{Binding TotalDuration, FallbackValue=100}"
                               Value="{Binding CurrentPosition, Mode=TwoWay}"
                               ValueChanged="TimelineSlider_ValueChanged"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <TextBlock Grid.Column="2"
                                 Text="{Binding TotalTime, FallbackValue='00:00'}"
                                 Foreground="White"
                                 VerticalAlignment="Center"
                                 Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Control Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding PlayVideoCommand}"
                               Style="{StaticResource MaterialDesignIconButton}"
                               Width="50"
                               Height="50"
                               Margin="5"
                               ToolTip="Play">
                            <materialDesign:PackIcon Kind="Play"
                                                   Width="32"
                                                   Height="32"
                                                   Foreground="White"/>
                        </Button>

                        <Button Command="{Binding PauseVideoCommand}"
                               Style="{StaticResource MaterialDesignIconButton}"
                               Width="50"
                               Height="50"
                               Margin="5"
                               ToolTip="Pause">
                            <materialDesign:PackIcon Kind="Pause"
                                                   Width="32"
                                                   Height="32"
                                                   Foreground="White"/>
                        </Button>

                        <Button Command="{Binding StopVideoCommand}"
                               Style="{StaticResource MaterialDesignIconButton}"
                               Width="50"
                               Height="50"
                               Margin="5"
                               ToolTip="Stop">
                            <materialDesign:PackIcon Kind="Stop"
                                                   Width="32"
                                                   Height="32"
                                                   Foreground="White"/>
                        </Button>

                        <!-- Volume Control -->
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="VolumeHigh"
                                                   Width="24"
                                                   Height="24"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <Slider x:Name="VolumeSlider"
                                   Minimum="0"
                                   Maximum="1"
                                   Value="{Binding Volume, FallbackValue=0.5}"
                                   Width="100"
                                   ValueChanged="VolumeSlider_ValueChanged"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
