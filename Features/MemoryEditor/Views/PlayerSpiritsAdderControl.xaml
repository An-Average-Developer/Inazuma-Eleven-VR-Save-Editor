<UserControl x:Class="InazumaElevenVRSaveEditor.Features.MemoryEditor.Views.PlayerSpiritsAdderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <Button Command="{Binding MemoryEditor.BackToMenuCommand}"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,15"
                      Height="35">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChevronLeft"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Menu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Custom Players (Cheat Engine)"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Add custom player spirits using Cheat Engine. Click the button below to open the Cheat Engine table."
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Resources/Cards/Spirits.png"
                       Width="80"
                       Height="80"
                       Margin="0,0,0,20"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock Text="Custom Players Cheat Table"
                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,10"/>

                <TextBlock Text="This feature uses Cheat Engine to add custom player spirits."
                         Style="{StaticResource MaterialDesignBody1TextBlock}"
                         Opacity="0.7"
                         HorizontalAlignment="Center"
                         TextWrapping="Wrap"
                         MaxWidth="400"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Requirements:"
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,5"/>

                <TextBlock Text="1. Cheat Engine must be installed"
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         HorizontalAlignment="Center"/>
                <TextBlock Text="2. The game must be running"
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         HorizontalAlignment="Center"/>
                <TextBlock Text="3. Follow the instructions in the CT file"
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Opacity="0.7"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,30"/>

                <Button Command="{Binding MemoryEditor.OpenCustomPlayersCTCommand}"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Height="60"
                      Width="300"
                      Background="#2196F3">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDocument"
                                               Width="28"
                                               Height="28"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                        <TextBlock Text="Open Cheat Table"
                                 VerticalAlignment="Center"
                                 FontSize="18"
                                 FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Opens: Resources\Custom Players.CT"
                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                         Opacity="0.5"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
