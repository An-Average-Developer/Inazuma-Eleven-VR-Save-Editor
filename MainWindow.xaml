<Window x:Class="InazumaElevenVRSaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InazumaElevenVRSaveEditor"
        Title="Inazuma Eleven VR - Save Editor"
        Height="1000"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide In Animation -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="20" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4"/>
        </Storyboard>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <!-- Ring Gradient for Theme Transition - hides old theme in expanding circle -->
        <RadialGradientBrush x:Key="RingMaskBrush"
                            x:Name="RingMask"
                            GradientOrigin="0.5,0.5"
                            Center="0.5,0.5"
                            RadiusX="3.0"
                            RadiusY="3.0"
                            MappingMode="RelativeToBoundingBox"
                            SpreadMethod="Pad">
            <GradientStop Color="Transparent" Offset="0"/>
            <GradientStop x:Name="InnerEdge" Color="Transparent" Offset="0"/>
            <GradientStop x:Name="OuterEdge" Color="Black" Offset="0.05"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>
    </Window.Resources>

    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Theme Transition Overlay - shows static snapshot of old theme outside ring -->
            <Grid x:Name="ThemeTransitionOverlay"
                  Grid.RowSpan="3"
                  Panel.ZIndex="1000"
                  IsHitTestVisible="False"
                  Visibility="Collapsed"
                  OpacityMask="{StaticResource RingMaskBrush}">
                <Image x:Name="OldThemeSnapshot"
                       Stretch="None"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
            </Grid>

            <!-- Main Content Container -->
            <Grid x:Name="MainContent" Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <materialDesign:ColorZone Mode="PrimaryMid"
                                         Padding="16"
                                         materialDesign:ElevationAssist.Elevation="Dp4">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <materialDesign:PackIcon Kind="ContentSave"
                                                   Width="32"
                                                   Height="32"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Inazuma Eleven VR"
                                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Save Editor &amp; Cheat Menu"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.8"
                                             Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding CurrentVersion}"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>

                <!-- Floating Buttons -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0">
                    <Button x:Name="ThemeToggleButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Toggle Theme"
                            Click="ThemeToggleButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="{DynamicResource SecondaryHueMidBrush}">
                        <materialDesign:PackIcon x:Name="ThemeIcon" Kind="WeatherSunny" Width="26" Height="26"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <TabControl Grid.Row="1"
                       Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                       materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                       Margin="0"
                       TabStripPlacement="Left">

                <!-- Create Backup Tab -->

                <!-- Restore Backup Tab -->

                <!-- Manage Backups Tab -->

                <!-- Memory Editor Tab -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="80" Margin="4">
                            <materialDesign:PackIcon Kind="Memory"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Cheat&#x0a;Menu"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="10"
                                     LineHeight="12"/>
                        </StackPanel>
                    </TabItem.Header>

                    <Grid Margin="20">
                        <!-- Tool Selection Menu -->
                        <Grid Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=menu}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Cheat Menu"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <TextBlock Text="Select a tool to use. Make sure the game is running before using these tools."
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.7"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Tool Selection Cards -->
                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="-10,-10,0,0" VerticalAlignment="Top" Background="Transparent">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <!-- Star Editor Card -->
                                <materialDesign:Card Style="{StaticResource CardStyle}"
                                                   Margin="0"
                                                   Padding="12,8,12,8"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Cursor="Hand"
                                                   MouseLeftButtonUp="TicketEditorCard_Click">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Star"
                                                               Width="32"
                                                               Height="32"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,4"
                                                               Foreground="{DynamicResource SecondaryHueMidBrush}"/>

                                        <TextBlock Text="Stars Editor"
                                                 FontSize="15"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,2"/>

                                        <TextBlock Text="Edit stars &amp; freeze"
                                                 FontSize="11"
                                                 Opacity="0.6"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"
                                                 Margin="4,0,4,4"/>

                                        <Button Command="{Binding MemoryEditor.SelectTicketEditorCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="26"
                                              Padding="10,0"
                                              Margin="0,0,0,0"
                                              Background="{DynamicResource SecondaryHueMidBrush}"
                                              Foreground="Black">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="ChevronRight"
                                                                       Width="14"
                                                                       Height="14"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Open"
                                                         FontSize="11"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Ina Flowers Editor Card -->
                                <materialDesign:Card Style="{StaticResource CardStyle}"
                                                   Margin="10,0,0,0"
                                                   Padding="12,8,12,8"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Cursor="Hand"
                                                   MouseLeftButtonUp="InaFlowersEditorCard_Click">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Flower"
                                                               Width="32"
                                                               Height="32"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,4"
                                                               Foreground="{DynamicResource SecondaryHueMidBrush}"/>

                                        <TextBlock Text="Ina Flowers"
                                                 FontSize="15"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,2"/>

                                        <TextBlock Text="Edit Ina Flowers"
                                                 FontSize="11"
                                                 Opacity="0.6"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"
                                                 Margin="4,0,4,4"/>

                                        <Button Command="{Binding MemoryEditor.SelectInaFlowersEditorCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="26"
                                              Padding="10,0"
                                              Margin="0,0,0,0"
                                              Background="{DynamicResource SecondaryHueMidBrush}"
                                              Foreground="Black">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="ChevronRight"
                                                                       Width="14"
                                                                       Height="14"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Open"
                                                         FontSize="11"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>
                            </StackPanel>
                            </materialDesign:Card>
                        </Grid>

                        <!-- Stars Editor View -->
                        <Grid Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=tickets}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <Button Command="{Binding MemoryEditor.BackToMenuCommand}"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,15"
                                          Height="35">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ChevronLeft"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Back to Menu" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <TextBlock Text="Stars Editor"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <TextBlock Text="Edit star values and freeze stars in real-time. Make sure the game is running before attaching."
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.7"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
                            <StackPanel>
                                <Border Background="{DynamicResource MaterialDesignDivider}"
                                       CornerRadius="8"
                                       Margin="0,0,0,20">
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="Star"
                                                               Width="32"
                                                               Height="32"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,15,0"
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Current Status"
                                                     FontSize="12"
                                                     Opacity="0.7"/>
                                            <TextBlock Text="{Binding MemoryEditor.StatusMessage}"
                                                     FontSize="24"
                                                     FontWeight="Bold"
                                                     Margin="0,5,0,0"/>
                                            <TextBlock Text="Click attach to connect to the game"
                                                     FontSize="11"
                                                     Opacity="0.6"
                                                     Margin="0,5,0,0"
                                                     FontStyle="Italic"/>
                                        </StackPanel>

                                        <Button Grid.Column="2"
                                              Command="{Binding MemoryEditor.AttachToProcessCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="45"
                                              VerticalAlignment="Center"
                                              Background="#4CAF50">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Link"
                                                                       Width="20"
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Attach to Game"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>

                                        <Button Grid.Column="2"
                                              Command="{Binding MemoryEditor.DetachFromProcessCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="45"
                                              VerticalAlignment="Center"
                                              Background="#D32F2F"
                                              Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="LinkOff"
                                                                       Width="20"
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Detach"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>

                                <!-- Freeze Stars Toggle -->
                                <Border Background="#4CAF50"
                                       CornerRadius="8"
                                       Margin="0,20,0,0"
                                       Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="Snowflake"
                                                               Width="28"
                                                               Height="28"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,15,0"
                                                               Foreground="White"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Freeze Stars"
                                                     FontSize="16"
                                                     FontWeight="Bold"
                                                     Foreground="White"/>
                                            <TextBlock Text="Prevent stars from decreasing (unlimited stars)"
                                                     FontSize="11"
                                                     Foreground="White"
                                                     Opacity="0.9"
                                                     Margin="0,3,0,0"/>
                                        </StackPanel>

                                        <ToggleButton Grid.Column="2"
                                                     IsChecked="{Binding MemoryEditor.IsStarsFrozen, Mode=OneWay}"
                                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                     ToolTip="Toggle freeze on/off"
                                                     Command="{Binding MemoryEditor.ToggleStarsFreezeCommand}"
                                                     VerticalAlignment="Center"
                                                     Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>

                        <!-- Content Area with Left Panel -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Panel - Values List -->
                            <materialDesign:Card Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0" VerticalAlignment="Top">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="Game Values"
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 Margin="0,0,0,10"/>

                                        <CheckBox IsChecked="{Binding MemoryEditor.AutoRefresh}"
                                                IsEnabled="{Binding MemoryEditor.IsAttached}"
                                                Content="Auto-refresh (1s)"
                                                Style="{StaticResource MaterialDesignCheckBox}"/>
                                    </StackPanel>

                                    <!-- Values List -->
                                    <ListBox Grid.Row="1"
                                           ItemsSource="{Binding MemoryEditor.StarsCollection}"
                                           SelectedItem="{Binding MemoryEditor.SelectedValue}"
                                           Style="{StaticResource MaterialDesignListBox}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                                             Text="{Binding Name}"
                                                             FontWeight="Medium"
                                                             FontSize="14"/>

                                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                                             Text="{Binding CurrentValue}"
                                                             FontWeight="Bold"
                                                             FontSize="16"
                                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                                             Grid.ColumnSpan="2"
                                                             Text="{Binding Description}"
                                                             Opacity="0.7"
                                                             FontSize="11"
                                                             TextWrapping="Wrap"
                                                             Margin="0,5,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <Button Grid.Row="2"
                                          Command="{Binding MemoryEditor.RefreshValuesCommand}"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Margin="0,0,5,0"
                                          Height="40">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Refresh"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Refresh Now" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Right Panel - Editor -->
                            <materialDesign:Card Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,-10,0,0">
                                <Grid>
                                    <StackPanel Visibility="{Binding MemoryEditor.SelectedValue, Converter={StaticResource NullToVisibilityConverter}}">
                                        <!-- Description -->
                                        <TextBlock Text="Description:"
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 Opacity="0.7"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding MemoryEditor.SelectedValue.Description}"
                                                 Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,20"/>

                                        <!-- Current Value -->
                                        <Border Background="{DynamicResource MaterialDesignDivider}"
                                              CornerRadius="8"
                                              Padding="15"
                                              Margin="0,0,0,20">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Current Value"
                                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                             Opacity="0.7"/>
                                                    <TextBlock Text="{Binding MemoryEditor.SelectedValue.CurrentValue}"
                                                             FontSize="32"
                                                             FontWeight="Bold"
                                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                </StackPanel>

                                                <materialDesign:PackIcon Grid.Column="1"
                                                                       Kind="Eye"
                                                                       Width="48"
                                                                       Height="48"
                                                                       Opacity="0.3"
                                                                       VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- New Value Input -->
                                        <TextBox Text="{Binding MemoryEditor.SelectedValue.NewValue, UpdateSourceTrigger=PropertyChanged}"
                                               materialDesign:HintAssist.Hint="New Value"
                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                               FontSize="20"
                                               Margin="0,0,0,20"/>

                                        <!-- Apply Button -->
                                        <Button Command="{Binding MemoryEditor.ApplyValueCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="50">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Check"
                                                                       Width="24"
                                                                       Height="24"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,10,0"/>
                                                <TextBlock Text="Apply New Value"
                                                         VerticalAlignment="Center"
                                                         FontSize="16"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <!-- No Selection Placeholder -->
                                    <StackPanel Visibility="{Binding MemoryEditor.SelectedValue, Converter={StaticResource InverseNullToVisibilityConverter}}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CursorPointer"
                                                               Width="64"
                                                               Height="64"
                                                               HorizontalAlignment="Center"
                                                               Opacity="0.3"
                                                               Margin="0,0,0,20"/>
                                        <TextBlock Text="Select a value from the list"
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 Opacity="0.5"
                                                 HorizontalAlignment="Center"/>
                                        <TextBlock Text="Choose a value to view and edit it"
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 Opacity="0.4"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                        </Grid>

                        <!-- Ina Flowers Editor View -->
                        <Grid Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=inaflowers}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <Button Command="{Binding MemoryEditor.BackToMenuCommand}"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,15"
                                          Height="35">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ChevronLeft"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Back to Menu" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <TextBlock Text="Ina Flowers Editor"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <TextBlock Text="Edit Ina Flowers values in real-time. Make sure the game is running before attaching."
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.7"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
                            <StackPanel>
                                <Border Background="{DynamicResource MaterialDesignDivider}"
                                       CornerRadius="8"
                                       Margin="0,0,0,20">
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="Flower"
                                                               Width="32"
                                                               Height="32"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,15,0"
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Current Status"
                                                     FontSize="12"
                                                     Opacity="0.7"/>
                                            <TextBlock Text="{Binding MemoryEditor.StatusMessage}"
                                                     FontSize="24"
                                                     FontWeight="Bold"
                                                     Margin="0,5,0,0"/>
                                            <TextBlock Text="Click attach to connect to the game"
                                                     FontSize="11"
                                                     Opacity="0.6"
                                                     Margin="0,5,0,0"
                                                     FontStyle="Italic"/>
                                        </StackPanel>

                                        <Button Grid.Column="2"
                                              Command="{Binding MemoryEditor.AttachToProcessCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="45"
                                              VerticalAlignment="Center"
                                              Background="#4CAF50">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Link"
                                                                       Width="20"
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Attach to Game"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>

                                        <Button Grid.Column="2"
                                              Command="{Binding MemoryEditor.DetachFromProcessCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="45"
                                              VerticalAlignment="Center"
                                              Background="#D32F2F"
                                              Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="LinkOff"
                                                                       Width="20"
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Detach"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>

                        <!-- Content Area with Left Panel -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Panel - Values List -->
                            <materialDesign:Card Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0" VerticalAlignment="Top">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="Game Values"
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 Margin="0,0,0,10"/>

                                        <CheckBox IsChecked="{Binding MemoryEditor.AutoRefresh}"
                                                IsEnabled="{Binding MemoryEditor.IsAttached}"
                                                Content="Auto-refresh (1s)"
                                                Style="{StaticResource MaterialDesignCheckBox}"/>
                                    </StackPanel>

                                    <!-- Values List -->
                                    <ListBox Grid.Row="1"
                                           ItemsSource="{Binding MemoryEditor.InaFlowersCollection}"
                                           SelectedItem="{Binding MemoryEditor.SelectedValue}"
                                           Style="{StaticResource MaterialDesignListBox}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                                             Text="{Binding Name}"
                                                             FontWeight="Medium"
                                                             FontSize="14"/>

                                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                                             Text="{Binding CurrentValue}"
                                                             FontWeight="Bold"
                                                             FontSize="16"
                                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                                             Grid.ColumnSpan="2"
                                                             Text="{Binding Description}"
                                                             Opacity="0.7"
                                                             FontSize="11"
                                                             TextWrapping="Wrap"
                                                             Margin="0,5,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <Button Grid.Row="2"
                                          Command="{Binding MemoryEditor.RefreshValuesCommand}"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Margin="0,0,5,0"
                                          Height="40">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Refresh"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Refresh Now" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Right Panel - Editor -->
                            <materialDesign:Card Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,-10,0,0">
                                <Grid>
                                    <StackPanel Visibility="{Binding MemoryEditor.SelectedValue, Converter={StaticResource NullToVisibilityConverter}}">
                                        <!-- Description -->
                                        <TextBlock Text="Description:"
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 Opacity="0.7"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding MemoryEditor.SelectedValue.Description}"
                                                 Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,20"/>

                                        <!-- Current Value -->
                                        <Border Background="{DynamicResource MaterialDesignDivider}"
                                              CornerRadius="8"
                                              Padding="15"
                                              Margin="0,0,0,20">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Current Value"
                                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                             Opacity="0.7"/>
                                                    <TextBlock Text="{Binding MemoryEditor.SelectedValue.CurrentValue}"
                                                             FontSize="32"
                                                             FontWeight="Bold"
                                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                </StackPanel>

                                                <materialDesign:PackIcon Grid.Column="1"
                                                                       Kind="Eye"
                                                                       Width="48"
                                                                       Height="48"
                                                                       Opacity="0.3"
                                                                       VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- New Value Input -->
                                        <TextBox Text="{Binding MemoryEditor.SelectedValue.NewValue, UpdateSourceTrigger=PropertyChanged}"
                                               materialDesign:HintAssist.Hint="New Value"
                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                               FontSize="20"
                                               Margin="0,0,0,20"/>

                                        <!-- Apply Button -->
                                        <Button Command="{Binding MemoryEditor.ApplyValueCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="50">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Check"
                                                                       Width="24"
                                                                       Height="24"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,10,0"/>
                                                <TextBlock Text="Apply New Value"
                                                         VerticalAlignment="Center"
                                                         FontSize="16"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <!-- No Selection Placeholder -->
                                    <StackPanel Visibility="{Binding MemoryEditor.SelectedValue, Converter={StaticResource InverseNullToVisibilityConverter}}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CursorPointer"
                                                               Width="64"
                                                               Height="64"
                                                               HorizontalAlignment="Center"
                                                               Opacity="0.3"
                                                               Margin="0,0,0,20"/>
                                        <TextBlock Text="Select a value from the list"
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 Opacity="0.5"
                                                 HorizontalAlignment="Center"/>
                                        <TextBlock Text="Choose a value to view and edit it"
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 Opacity="0.4"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                        </Grid>
                    </Grid>
                </TabItem>

                <!-- Mod Manager Tab -->

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="80" Margin="4">
                            <materialDesign:PackIcon Kind="CloudDownload"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Updates"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="10"
                                     LineHeight="12"/>
                        </StackPanel>
                    </TabItem.Header>

                    <Grid Margin="20">
                        <Grid Visibility="{Binding ShowingInstallationView, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="App Updates"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <TextBlock Text="Check for updates and download the latest version from GitHub."
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.7"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
                            <StackPanel>
                                <Border Background="{DynamicResource MaterialDesignDivider}"
                                       CornerRadius="8"
                                       Margin="0,0,0,20"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="CheckForUpdatesBanner_Click">
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="Information"
                                                               Width="32"
                                                               Height="32"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,15,0"
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Current Version"
                                                     FontSize="12"
                                                     Opacity="0.7"/>
                                            <TextBlock FontSize="24"
                                                     FontWeight="Bold"
                                                     Margin="0,5,0,0">
                                                <Run Text="{Binding CurrentVersion, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock Text="Click here to check for updates"
                                                     FontSize="11"
                                                     Opacity="0.6"
                                                     Margin="0,5,0,0"
                                                     FontStyle="Italic"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border x:Name="UpdateStatusBorder"
                                       Background="{Binding UpdateStatusColor}"
                                       CornerRadius="8"
                                       Margin="0,0,0,20"
                                       Visibility="{Binding HasCheckedForUpdates, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Cursor="{Binding UpdateStatusCursor}"
                                       MouseLeftButtonUp="UpdateStatusButton_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsUpdateAvailable}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Cursor" Value="Arrow"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="{Binding UpdateStatusIcon}"
                                                               Width="32"
                                                               Height="32"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,15,0"
                                                               Foreground="White"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock FontSize="20"
                                                     Foreground="White"
                                                     FontWeight="Bold">
                                                <Run Text="{Binding UpdateStatusTitle, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="14"
                                                     Foreground="White"
                                                     Opacity="0.9"
                                                     TextWrapping="Wrap"
                                                     Margin="0,5,0,0">
                                                <Run Text="{Binding UpdateStatusMessage, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <StackPanel Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Margin="0,0,0,20">
                                    <TextBlock Text="New Version Details"
                                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                                             FontWeight="Medium"
                                             Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                 Text="Latest Version:"
                                                 Margin="0,5"
                                                 Opacity="0.7"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                 Text="{Binding LatestVersion, FallbackValue=N/A}"
                                                 Margin="10,5"
                                                 FontWeight="Medium"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                 Text="File Name:"
                                                 Margin="0,5"
                                                 Opacity="0.7"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                 Text="{Binding UpdateFileName}"
                                                 Margin="10,5"
                                                 FontWeight="Medium"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                 Text="File Size:"
                                                 Margin="0,5"
                                                 Opacity="0.7"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1"
                                                 Text="{Binding UpdateFileSize}"
                                                 Margin="10,5"
                                                 FontWeight="Medium"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Margin="0,0,0,20">
                                    <TextBlock Text="Downloading Update..."
                                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                                             FontWeight="Medium"
                                             Margin="0,0,0,10"/>
                                    <ProgressBar Value="{Binding DownloadProgress}"
                                               Height="8"
                                               Maximum="100"/>
                                    <TextBlock Text="{Binding DownloadProgressText}"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.7"
                                             Margin="0,5,0,0"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock Text="Click the banner above to start the update"
                                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                         Opacity="0.7"
                                         HorizontalAlignment="Center"
                                         Margin="0,10,0,0"
                                         Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </materialDesign:Card>
                        </Grid>

                        <Grid Visibility="{Binding ShowingInstallationView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="Cloud"
                                                           Width="48"
                                                           Height="48"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,20,0"
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Update Available!"
                                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                 Margin="0,0,0,10"/>
                                        <TextBlock FontSize="16"
                                                 Opacity="0.8">
                                            <Run Text="Version"/>
                                            <Run Text="{Binding LatestVersion, Mode=OneWay}" FontWeight="Bold"/>
                                            <Run Text="is ready to install"/>
                                        </TextBlock>
                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                     Text="File Name:"
                                                     Margin="0,5,10,5"
                                                     Opacity="0.7"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                     Margin="0,5"
                                                     FontWeight="Medium">
                                                <Run Text="{Binding UpdateFileName, Mode=OneWay}"/>
                                            </TextBlock>

                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                     Text="File Size:"
                                                     Margin="0,5,10,5"
                                                     Opacity="0.7"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                     Margin="0,5"
                                                     FontWeight="Medium">
                                                <Run Text="{Binding UpdateFileSize, Mode=OneWay}"/>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                             Text="What's New:"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <Border Grid.Row="1"
                                          Background="{DynamicResource MaterialDesignDivider}"
                                          CornerRadius="8"
                                          Padding="15">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <TextBlock TextWrapping="Wrap"
                                                     FontFamily="Consolas"
                                                     FontSize="13"
                                                     LineHeight="22">
                                                <Run Text="{Binding Changelog, Mode=OneWay}"/>
                                            </TextBlock>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="2" Style="{StaticResource CardStyle}" Margin="10,0,10,10">
                                <StackPanel>
                                    <StackPanel Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                              Margin="0,0,0,20">
                                        <TextBlock FontSize="16"
                                                 FontWeight="Medium"
                                                 Margin="0,0,0,10">
                                            <Run Text="{Binding DownloadProgressText, Mode=OneWay}"/>
                                        </TextBlock>
                                        <ProgressBar Value="{Binding DownloadProgress}"
                                                   Height="8"
                                                   Maximum="100"/>
                                        <TextBlock HorizontalAlignment="Center"
                                                 Margin="0,5,0,0"
                                                 Opacity="0.7">
                                            <Run Text="{Binding DownloadProgress, Mode=OneWay}"/>
                                            <Run Text="%"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                              HorizontalAlignment="Right"
                                              Visibility="{Binding IsDownloading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <Button Content="Cancel"
                                              Command="{Binding CancelInstallationCommand}"
                                              Style="{StaticResource MaterialDesignOutlinedButton}"
                                              Height="40"
                                              Margin="0,0,10,0"
                                              Padding="25,0"/>

                                        <Button Command="{Binding AcceptInstallationCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="40"
                                              Padding="25,0"
                                              Background="#4CAF50">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Download"
                                                                       Width="20"
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Download &amp; Install" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
