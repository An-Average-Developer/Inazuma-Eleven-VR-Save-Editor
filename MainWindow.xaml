<Window x:Class="InazumaElevenVRSaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InazumaElevenVRSaveEditor"
        xmlns:memoryEditorViews="clr-namespace:InazumaElevenVRSaveEditor.Features.MemoryEditor.Views"
        xmlns:updatesViews="clr-namespace:InazumaElevenVRSaveEditor.Features.Updates.Views"
        Title="Inazuma Eleven VR - Save Editor"
        Height="1000"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <!-- Ring Gradient for Theme Transition - hides old theme in expanding circle -->
        <RadialGradientBrush x:Key="RingMaskBrush"
                            x:Name="RingMask"
                            GradientOrigin="0.5,0.5"
                            Center="0.5,0.5"
                            RadiusX="3.0"
                            RadiusY="3.0"
                            MappingMode="RelativeToBoundingBox"
                            SpreadMethod="Pad">
            <GradientStop Color="Transparent" Offset="0"/>
            <GradientStop x:Name="InnerEdge" Color="Transparent" Offset="0"/>
            <GradientStop x:Name="OuterEdge" Color="Black" Offset="0.05"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>
    </Window.Resources>

    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Loading Screen Overlay -->
            <Grid x:Name="LoadingScreenOverlay"
                  Grid.RowSpan="3"
                  Panel.ZIndex="9999"
                  Visibility="Visible">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF1E3A8A" Offset="0"/>
                        <GradientStop Color="#FF3B82F6" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Animated Card Image Area -->
                    <Viewbox Grid.Row="1" Width="150" Height="150" Margin="0,0,0,30">
                        <Image x:Name="LoadingCardImage"
                              Stretch="Uniform"
                              RenderTransformOrigin="0.5,0.5">
                            <Image.Effect>
                                <DropShadowEffect x:Name="LoadingCardGlow"
                                                Color="#FFD700"
                                                BlurRadius="25"
                                                ShadowDepth="0"
                                                Opacity="0.9"/>
                            </Image.Effect>
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="LoadingCardScale" ScaleX="1" ScaleY="1"/>
                                    <RotateTransform x:Name="LoadingCardRotate" Angle="0"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Viewbox>

                    <!-- Loading Text -->
                    <TextBlock Grid.Row="2"
                              Text="INAZUMA ELEVEN VR - SAVE EDITOR"
                              FontSize="26"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>

                    <!-- Progress Bar -->
                    <Grid Grid.Row="3" Margin="100,0" MaxWidth="600">
                        <Border Height="12"
                               Background="#22FFFFFF"
                               CornerRadius="6"/>
                        <Border x:Name="LoadingProgressBar"
                               Height="12"
                               Width="0"
                               HorizontalAlignment="Left"
                               CornerRadius="6">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FFD700" Offset="0"/>
                                    <GradientStop Color="#FFA500" Offset="0.5"/>
                                    <GradientStop Color="#FFD700" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#FFD700"
                                                BlurRadius="15"
                                                ShadowDepth="0"
                                                Opacity="0.8"/>
                            </Border.Effect>
                        </Border>
                    </Grid>

                    <!-- Loading Status Text -->
                    <TextBlock x:Name="LoadingStatusText"
                              Grid.Row="4"
                              Text="Initializing..."
                              FontSize="14"
                              Foreground="#AAFFFFFF"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Top"
                              Margin="0,20,0,0"/>
                </Grid>
            </Grid>

            <!-- Theme Transition Overlay - shows static snapshot of old theme outside ring -->
            <Grid x:Name="ThemeTransitionOverlay"
                  Grid.RowSpan="3"
                  Panel.ZIndex="1000"
                  IsHitTestVisible="False"
                  Visibility="Collapsed"
                  OpacityMask="{StaticResource RingMaskBrush}">
                <Image x:Name="OldThemeSnapshot"
                       Stretch="None"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
            </Grid>

            <!-- Main Content Container -->
            <Grid x:Name="MainContent" Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <materialDesign:ColorZone Mode="PrimaryMid"
                                         Padding="16"
                                         materialDesign:ElevationAssist.Elevation="Dp4"
                                         MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <materialDesign:PackIcon Kind="ContentSave"
                                                   Width="32"
                                                   Height="32"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="INAZUMA ELEVEN VR - SAVE EDITOR"
                                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Save Editor &amp; Cheat Menu"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.8"
                                             Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding CurrentVersion}"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>

                <!-- Floating Buttons -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0">
                    <Button x:Name="SettingsButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Settings"
                            Click="SettingsButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="{DynamicResource SecondaryHueMidBrush}">
                        <materialDesign:PackIcon Kind="Cog" Width="26" Height="26"/>
                    </Button>
                    <Button x:Name="ThemeToggleButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Toggle Theme"
                            Click="ThemeToggleButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="{DynamicResource SecondaryHueMidBrush}">
                        <materialDesign:PackIcon x:Name="ThemeIcon" Kind="WeatherSunny" Width="26" Height="26"/>
                    </Button>
                    <Button x:Name="CloseButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Close Application"
                            Click="CloseButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="#D32F2F">
                        <materialDesign:PackIcon Kind="Close" Width="26" Height="26"/>
                    </Button>
                </StackPanel>

                <!-- Settings Popup Menu -->
                <Popup x:Name="SettingsPopup"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=SettingsButton}"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    <Border Background="{DynamicResource MaterialDesignPaper}"
                            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                            BorderThickness="2"
                            CornerRadius="5"
                            Padding="10"
                            materialDesign:ElevationAssist.Elevation="Dp8">
                        <StackPanel>
                            <CheckBox x:Name="LoadingScreenCheckBox"
                                     Content="Show Loading Screen"
                                     IsChecked="True"
                                     Checked="LoadingScreenCheckBox_Changed"
                                     Unchecked="LoadingScreenCheckBox_Changed"
                                     Margin="5"
                                     Style="{StaticResource MaterialDesignCheckBox}"/>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>

            <!-- Main Content -->
            <TabControl Grid.Row="1"
                       Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                       materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                       Margin="0"
                       TabStripPlacement="Left">

                <!-- Memory Editor Tab -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="80" Margin="4">
                            <materialDesign:PackIcon Kind="Memory"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Cheat&#x0a;Menu"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="10"
                                     LineHeight="12"/>
                        </StackPanel>
                    </TabItem.Header>

                    <Grid Margin="20">
                        <!-- Tool Selection Menu -->
                        <memoryEditorViews:ToolSelectionMenuControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=menu}"
                            DataContext="{Binding}"/>

                        <!-- Stars Editor View -->
                        <memoryEditorViews:StarsEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=tickets}"
                            DataContext="{Binding}"/>

                        <!-- Ina Flowers Editor View -->
                        <memoryEditorViews:InaFlowersEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=inaflowers}"
                            DataContext="{Binding}"/>

                        <!-- Spirits Editor View -->
                        <memoryEditorViews:SpiritsEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=spirits}"
                            DataContext="{Binding}"/>

                        <!-- Beans Editor View -->
                        <memoryEditorViews:BeansEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=beans}"
                            DataContext="{Binding}"/>

                        <!-- Victory Items Editor View -->
                        <memoryEditorViews:VictoryItemsEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=victoryitems}"
                            DataContext="{Binding}"/>

                        <!-- Items List View -->
                        <memoryEditorViews:ItemListControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=itemslist}"
                            DataContext="{Binding}"/>
                    </Grid>
                </TabItem>

                <!-- Updates Tab -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="80" Margin="4">
                            <materialDesign:PackIcon Kind="CloudDownload"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Updates"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="10"
                                     LineHeight="12"/>
                        </StackPanel>
                    </TabItem.Header>

                    <updatesViews:UpdatesTabControl DataContext="{Binding}"/>
                </TabItem>
            </TabControl>

            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
