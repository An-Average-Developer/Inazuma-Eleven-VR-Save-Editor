<Window x:Class="InazumaElevenVRSaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InazumaElevenVRSaveEditor"
        Title="Inazuma Eleven VR - Save Editor"
        Height="1000"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide In Animation -->
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="20" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4"/>
        </Storyboard>

        <!-- Spirit Hover Animation -->
        <Storyboard x:Key="SpiritHoverEnter">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           To="1.05" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           To="1.05" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Spirit Hover Leave Animation -->
        <Storyboard x:Key="SpiritHoverLeave">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           To="1" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           To="1" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Spirit Click Animation -->
        <Storyboard x:Key="SpiritClickAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1.05"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.9"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="1.1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="1.05"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1.05"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.9"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="1.1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="1.05"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <!-- Ring Gradient for Theme Transition - hides old theme in expanding circle -->
        <RadialGradientBrush x:Key="RingMaskBrush"
                            x:Name="RingMask"
                            GradientOrigin="0.5,0.5"
                            Center="0.5,0.5"
                            RadiusX="3.0"
                            RadiusY="3.0"
                            MappingMode="RelativeToBoundingBox"
                            SpreadMethod="Pad">
            <GradientStop Color="Transparent" Offset="0"/>
            <GradientStop x:Name="InnerEdge" Color="Transparent" Offset="0"/>
            <GradientStop x:Name="OuterEdge" Color="Black" Offset="0.05"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>
    </Window.Resources>

    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Theme Transition Overlay - shows static snapshot of old theme outside ring -->
            <Grid x:Name="ThemeTransitionOverlay"
                  Grid.RowSpan="3"
                  Panel.ZIndex="1000"
                  IsHitTestVisible="False"
                  Visibility="Collapsed"
                  OpacityMask="{StaticResource RingMaskBrush}">
                <Image x:Name="OldThemeSnapshot"
                       Stretch="None"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
            </Grid>

            <!-- Main Content Container -->
            <Grid x:Name="MainContent" Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <materialDesign:ColorZone Mode="PrimaryMid"
                                         Padding="16"
                                         materialDesign:ElevationAssist.Elevation="Dp4"
                                         MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <materialDesign:PackIcon Kind="ContentSave"
                                                   Width="32"
                                                   Height="32"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="INAZUMA ELVEN VR - SAVE EDITOR"
                                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Save Editor &amp; Cheat Menu"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.8"
                                             Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding CurrentVersion}"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>

                <!-- Floating Buttons -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0">
                    <Button x:Name="ThemeToggleButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Toggle Theme"
                            Click="ThemeToggleButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="{DynamicResource SecondaryHueMidBrush}">
                        <materialDesign:PackIcon x:Name="ThemeIcon" Kind="WeatherSunny" Width="26" Height="26"/>
                    </Button>
                    <Button x:Name="CloseButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Close Application"
                            Click="CloseButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="#D32F2F">
                        <materialDesign:PackIcon Kind="Close" Width="26" Height="26"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <TabControl Grid.Row="1"
                       Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                       materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                       Margin="0"
                       TabStripPlacement="Left">

                <!-- Memory Editor Tab -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="80" Margin="4">
                            <materialDesign:PackIcon Kind="Memory"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Cheat&#x0a;Menu"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="10"
                                     LineHeight="12"/>
                        </StackPanel>
                    </TabItem.Header>

                    <Grid Margin="20">
                        <!-- Tool Selection Menu -->
                        <Grid Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=menu}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Cheat Menu"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <TextBlock Text="Select a tool to use. Make sure the game is closed before using these tools."
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.7"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Tool Selection Cards -->
                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="-10,-10,0,0" VerticalAlignment="Top" Background="Transparent">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <!-- Star Editor Card -->
                                <materialDesign:Card Style="{StaticResource CardStyle}"
                                                   Margin="0"
                                                   Padding="16,12,16,12"
                                                   Width="180"
                                                   MinHeight="170"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Cursor="Hand"
                                                   MouseLeftButtonUp="TicketEditorCard_Click">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="/Resources/Cards/Stars.png"
                                               Width="48"
                                               Height="48"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <TextBlock Text="Stars"
                                                 FontSize="15"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,4"/>

                                        <TextBlock Text="Edit gachapon stars"
                                                 FontSize="11"
                                                 Opacity="0.6"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"
                                                 Margin="8,0,8,8"/>

                                        <Button Command="{Binding MemoryEditor.SelectTicketEditorCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="28"
                                              Padding="12,0"
                                              Margin="0,0,0,0"
                                              Background="{DynamicResource SecondaryHueMidBrush}"
                                              Foreground="Black">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="ChevronRight"
                                                                       Width="14"
                                                                       Height="14"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Open"
                                                         FontSize="11"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Ina Flowers Editor Card -->
                                <materialDesign:Card Style="{StaticResource CardStyle}"
                                                   Margin="10,0,0,0"
                                                   Padding="16,12,16,12"
                                                   Width="180"
                                                   MinHeight="170"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Cursor="Hand"
                                                   MouseLeftButtonUp="InaFlowersEditorCard_Click">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="/Resources/Cards/Inazuma Flower.png"
                                               Width="48"
                                               Height="48"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <TextBlock Text="Kizuna Flowers"
                                                 FontSize="15"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,4"/>

                                        <TextBlock Text="Edit Kizuna Flowers"
                                                 FontSize="11"
                                                 Opacity="0.6"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"
                                                 Margin="8,0,8,8"/>

                                        <Button Command="{Binding MemoryEditor.SelectInaFlowersEditorCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="28"
                                              Padding="12,0"
                                              Margin="0,0,0,0"
                                              Background="{DynamicResource SecondaryHueMidBrush}"
                                              Foreground="Black">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="ChevronRight"
                                                                       Width="14"
                                                                       Height="14"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Open"
                                                         FontSize="11"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Spirits Editor Card -->
                                <materialDesign:Card Style="{StaticResource CardStyle}"
                                                   Margin="10,0,0,0"
                                                   Padding="16,12,16,12"
                                                   Width="180"
                                                   MinHeight="170"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Cursor="Hand"
                                                   MouseLeftButtonUp="SpiritsEditorCard_Click">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="/Resources/Cards/Spirits.png"
                                               Width="48"
                                               Height="48"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <TextBlock Text="Spirits"
                                                 FontSize="15"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,4"/>

                                        <TextBlock Text="Edit Spirits"
                                                 FontSize="11"
                                                 Opacity="0.6"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"
                                                 Margin="8,0,8,8"/>

                                        <Button Command="{Binding MemoryEditor.SelectSpiritsEditorCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="28"
                                              Padding="12,0"
                                              Margin="0,0,0,0"
                                              Background="{DynamicResource SecondaryHueMidBrush}"
                                              Foreground="Black">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="ChevronRight"
                                                                       Width="14"
                                                                       Height="14"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Open"
                                                         FontSize="11"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Beans Editor Card -->
                                <materialDesign:Card Style="{StaticResource CardStyle}"
                                                   Margin="10,0,0,0"
                                                   Padding="16,12,16,12"
                                                   Width="180"
                                                   MinHeight="170"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Cursor="Hand"
                                                   MouseLeftButtonUp="BeansEditorCard_Click">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="/Resources/Cards/Kicking Power.png"
                                               Width="48"
                                               Height="48"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <TextBlock Text="Beans"
                                                 FontSize="15"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,4"/>

                                        <TextBlock Text="Edit Beans"
                                                 FontSize="11"
                                                 Opacity="0.6"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"
                                                 Margin="8,0,8,8"/>

                                        <Button Command="{Binding MemoryEditor.SelectBeansEditorCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="28"
                                              Padding="12,0"
                                              Margin="0,0,0,0"
                                              Background="{DynamicResource SecondaryHueMidBrush}"
                                              Foreground="Black">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="ChevronRight"
                                                                       Width="14"
                                                                       Height="14"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Open"
                                                         FontSize="11"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>
                            </StackPanel>
                            </materialDesign:Card>
                        </Grid>

                        <!-- Stars Editor View -->
                        <Grid Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=tickets}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <Button Command="{Binding MemoryEditor.BackToMenuCommand}"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,15"
                                          Height="35">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ChevronLeft"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Back to Menu" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <TextBlock Text="Stars Editor"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <TextBlock Text="Edit star values and freeze stars in real-time. Make sure the game is closed before using these tools."
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.7"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
                            <StackPanel>
                                <Border Background="{DynamicResource MaterialDesignDivider}"
                                       CornerRadius="8"
                                       Margin="0,0,0,20">
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0"
                                               Source="/Resources/Cards/Stars.png"
                                               Width="32"
                                               Height="32"
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Current Status"
                                                     FontSize="12"
                                                     Opacity="0.7"/>
                                            <TextBlock Text="{Binding MemoryEditor.StatusMessage}"
                                                     FontSize="24"
                                                     FontWeight="Bold"
                                                     Margin="0,5,0,0"/>
                                            <TextBlock Text="Click attach to connect to the game"
                                                     FontSize="11"
                                                     Opacity="0.6"
                                                     Margin="0,5,0,0"
                                                     FontStyle="Italic"/>
                                        </StackPanel>

                                        <Button Grid.Column="2"
                                              Command="{Binding MemoryEditor.AttachToProcessCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="45"
                                              VerticalAlignment="Center"
                                              Background="#4CAF50">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Link"
                                                                       Width="20"
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Attach to Game"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>

                                        <Button Grid.Column="2"
                                              Command="{Binding MemoryEditor.DetachFromProcessCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="45"
                                              VerticalAlignment="Center"
                                              Background="#D32F2F"
                                              Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="LinkOff"
                                                                       Width="20"
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Detach"
                                                         VerticalAlignment="Center"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>

                                <!-- Freeze Stars Toggle -->
                                <Border Background="#4CAF50"
                                       CornerRadius="8"
                                       Margin="0,20,0,0"
                                       Visibility="{Binding MemoryEditor.IsAttached, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="Snowflake"
                                                               Width="28"
                                                               Height="28"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,15,0"
                                                               Foreground="White"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Freeze Stars"
                                                     FontSize="16"
                                                     FontWeight="Bold"
                                                     Foreground="White"/>
                                            <TextBlock Text="Prevent stars from decreasing (unlimited stars)"
                                                     FontSize="11"
                                                     Foreground="White"
                                                     Opacity="0.9"
                                                     Margin="0,3,0,0"/>
                                        </StackPanel>

                                        <ToggleButton Grid.Column="2"
                                                     IsChecked="{Binding MemoryEditor.IsStarsFrozen, Mode=OneWay}"
                                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                     ToolTip="Toggle freeze on/off"
                                                     Command="{Binding MemoryEditor.ToggleStarsFreezeCommand}"
                                                     VerticalAlignment="Center"
                                                     Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>

                        <!-- Content Area with Left Panel -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Panel - Values List -->
                            <materialDesign:Card Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0" VerticalAlignment="Top">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                        <TextBlock Text="Game Values"
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 Margin="0,0,0,10"/>

                                        <CheckBox IsChecked="{Binding MemoryEditor.AutoRefresh}"
                                                IsEnabled="{Binding MemoryEditor.IsAttached}"
                                                Content="Auto-refresh (1s)"
                                                Style="{StaticResource MaterialDesignCheckBox}"/>
                                    </StackPanel>

                                    <!-- Values List -->
                                    <ListBox Grid.Row="1"
                                           ItemsSource="{Binding MemoryEditor.StarsCollection}"
                                           SelectedItem="{Binding MemoryEditor.SelectedValue}"
                                           Style="{StaticResource MaterialDesignListBox}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal"
                                                           Height="60"
                                                           Margin="5">
                                                    <!-- Star Image -->
                                                    <Image Source="/Resources/Cards/Stars.png"
                                                           Width="60"
                                                           Height="60"
                                                           Stretch="Uniform"
                                                           VerticalAlignment="Center"
                                                           RenderOptions.BitmapScalingMode="HighQuality"/>

                                                    <!-- Quantity Badge -->
                                                    <Border Background="#E91E63"
                                                           CornerRadius="12"
                                                           Padding="8,4"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0,0,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Counter"
                                                                                   Width="16"
                                                                                   Height="16"
                                                                                   Foreground="White"
                                                                                   VerticalAlignment="Center"
                                                                                   Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding CurrentValue}"
                                                                     FontSize="16"
                                                                     FontWeight="Bold"
                                                                     Foreground="White"
                                                                     VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <Button Grid.Row="2"
                                          Command="{Binding MemoryEditor.RefreshValuesCommand}"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Margin="0,15,5,0"
                                          Height="40">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Refresh"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Refresh Now" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Right Panel - Editor -->
                            <materialDesign:Card Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,-10,0,0">
                                <Grid>
                                    <Border Background="White"
                                           CornerRadius="8"
                                           Padding="20"
                                           Visibility="{Binding MemoryEditor.SelectedValue, Converter={StaticResource NullToVisibilityConverter}}"
                                           VerticalAlignment="Center">
                                        <StackPanel>
                                            <!-- New Value Label -->
