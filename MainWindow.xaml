                                                           Height="80"
                                                           HorizontalAlignment="Center">
                                                        <Grid>
                                                            <!-- Bean Image -->
                                                            <Image Stretch="Uniform"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   RenderOptions.BitmapScalingMode="HighQuality">
                                                                <Image.Style>
                                                                    <Style TargetType="Image">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Name}" Value="Instantaneous">
                                                                                <Setter Property="Source" Value="/Resources/Beans/Instantaneous.png"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Name}" Value="Intelligence">
                                                                                <Setter Property="Source" Value="/Resources/Beans/Intelligence.png"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Name}" Value="Kicking Power">
                                                                                <Setter Property="Source" Value="/Resources/Beans/Kicking Power.png"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Name}" Value="Mind's Eye">
                                                                                <Setter Property="Source" Value="/Resources/Beans/Minds Eye.png"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Name}" Value="Strength">
                                                                                <Setter Property="Source" Value="/Resources/Beans/Strength.png"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Name}" Value="Technique">
                                                                                <Setter Property="Source" Value="/Resources/Beans/Technique.png"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Name}" Value="Unshakable">
                                                                                <Setter Property="Source" Value="/Resources/Beans/Unshakable.png"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Image.Style>
                                                            </Image>

                                                            <!-- Quantity Badge -->
                                                            <Border Background="#E91E63"
                                                                   CornerRadius="12"
                                                                   Padding="6,3"
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Bottom"
                                                                   Margin="6">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Counter"
                                                                                           Width="14"
                                                                                           Height="14"
                                                                                           Foreground="White"
                                                                                           VerticalAlignment="Center"
                                                                                           Margin="0,0,4,0"/>
                                                                    <TextBlock Text="{Binding CurrentValue}"
                                                                             FontSize="14"
                                                                             FontWeight="Bold"
                                                                             Foreground="White"
                                                                             VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                        </Grid>
                    </Grid>
                </TabItem>

                <!-- Mod Manager Tab -->

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="80" Margin="4">
                            <materialDesign:PackIcon Kind="CloudDownload"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Updates"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="10"
                                     LineHeight="12"/>
                        </StackPanel>
                    </TabItem.Header>

                    <Grid Margin="20">
                        <Grid Visibility="{Binding ShowingInstallationView, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="App Updates"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <TextBlock Text="Check for updates and download the latest version from GitHub."
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.7"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
                            <StackPanel>
                                <Border Background="{DynamicResource MaterialDesignDivider}"
                                       CornerRadius="8"
                                       Margin="0,0,0,20"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="CheckForUpdatesBanner_Click">
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="Information"
                                                               Width="32"
                                                               Height="32"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,15,0"
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Current Version"
                                                     FontSize="12"
                                                     Opacity="0.7"/>
                                            <TextBlock FontSize="24"
                                                     FontWeight="Bold"
                                                     Margin="0,5,0,0">
                                                <Run Text="{Binding CurrentVersion, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock Text="Click here to check for updates"
                                                     FontSize="11"
                                                     Opacity="0.6"
                                                     Margin="0,5,0,0"
                                                     FontStyle="Italic"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border x:Name="UpdateStatusBorder"
                                       Background="{Binding UpdateStatusColor}"
                                       CornerRadius="8"
                                       Margin="0,0,0,20"
                                       Visibility="{Binding HasCheckedForUpdates, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Cursor="{Binding UpdateStatusCursor}"
                                       MouseLeftButtonUp="UpdateStatusButton_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsUpdateAvailable}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Cursor" Value="Arrow"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="{Binding UpdateStatusIcon}"
                                                               Width="32"
                                                               Height="32"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,15,0"
                                                               Foreground="White"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock FontSize="20"
                                                     Foreground="White"
                                                     FontWeight="Bold">
                                                <Run Text="{Binding UpdateStatusTitle, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="14"
                                                     Foreground="White"
                                                     Opacity="0.9"
                                                     TextWrapping="Wrap"
                                                     Margin="0,5,0,0">
                                                <Run Text="{Binding UpdateStatusMessage, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <StackPanel Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Margin="0,0,0,20">
                                    <TextBlock Text="New Version Details"
                                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                                             FontWeight="Medium"
                                             Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                 Text="Latest Version:"
                                                 Margin="0,5"
                                                 Opacity="0.7"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                 Text="{Binding LatestVersion, FallbackValue=N/A}"
                                                 Margin="10,5"
                                                 FontWeight="Medium"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                 Text="File Name:"
                                                 Margin="0,5"
                                                 Opacity="0.7"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                 Text="{Binding UpdateFileName}"
                                                 Margin="10,5"
                                                 FontWeight="Medium"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                 Text="File Size:"
                                                 Margin="0,5"
                                                 Opacity="0.7"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1"
                                                 Text="{Binding UpdateFileSize}"
                                                 Margin="10,5"
                                                 FontWeight="Medium"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Margin="0,0,0,20">
                                    <TextBlock Text="Downloading Update..."
                                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                                             FontWeight="Medium"
                                             Margin="0,0,0,10"/>
                                    <ProgressBar Value="{Binding DownloadProgress}"
                                               Height="8"
                                               Maximum="100"/>
                                    <TextBlock Text="{Binding DownloadProgressText}"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.7"
                                             Margin="0,5,0,0"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock Text="Click the banner above to start the update"
                                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                         Opacity="0.7"
                                         HorizontalAlignment="Center"
                                         Margin="0,10,0,0"
                                         Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </materialDesign:Card>
                        </Grid>

                        <Grid Visibility="{Binding ShowingInstallationView, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="Cloud"
                                                           Width="48"
                                                           Height="48"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,20,0"
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Update Available!"
                                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                 Margin="0,0,0,10"/>
                                        <TextBlock FontSize="16"
                                                 Opacity="0.8">
                                            <Run Text="Version"/>
                                            <Run Text="{Binding LatestVersion, Mode=OneWay}" FontWeight="Bold"/>
                                            <Run Text="is ready to install"/>
                                        </TextBlock>
                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                     Text="File Name:"
                                                     Margin="0,5,10,5"
                                                     Opacity="0.7"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                     Margin="0,5"
                                                     FontWeight="Medium">
                                                <Run Text="{Binding UpdateFileName, Mode=OneWay}"/>
                                            </TextBlock>

                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                     Text="File Size:"
                                                     Margin="0,5,10,5"
                                                     Opacity="0.7"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                     Margin="0,5"
                                                     FontWeight="Medium">
                                                <Run Text="{Binding UpdateFileSize, Mode=OneWay}"/>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                             Text="What's New:"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Margin="0,0,0,15"/>

                                    <Border Grid.Row="1"
                                          Background="{DynamicResource MaterialDesignDivider}"
                                          CornerRadius="8"
                                          Padding="15">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <TextBlock TextWrapping="Wrap"
                                                     FontFamily="Consolas"
                                                     FontSize="13"
                                                     LineHeight="22">
                                                <Run Text="{Binding Changelog, Mode=OneWay}"/>
                                            </TextBlock>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Row="2" Style="{StaticResource CardStyle}" Margin="10,0,10,10">
                                <StackPanel>
                                    <StackPanel Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                              Margin="0,0,0,20">
                                        <TextBlock FontSize="16"
                                                 FontWeight="Medium"
                                                 Margin="0,0,0,10">
                                            <Run Text="{Binding DownloadProgressText, Mode=OneWay}"/>
                                        </TextBlock>
                                        <ProgressBar Value="{Binding DownloadProgress}"
                                                   Height="8"
                                                   Maximum="100"/>
                                        <TextBlock HorizontalAlignment="Center"
                                                 Margin="0,5,0,0"
                                                 Opacity="0.7">
                                            <Run Text="{Binding DownloadProgress, Mode=OneWay}"/>
                                            <Run Text="%"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                              HorizontalAlignment="Right"
                                              Visibility="{Binding IsDownloading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <Button Content="Cancel"
                                              Command="{Binding CancelInstallationCommand}"
                                              Style="{StaticResource MaterialDesignOutlinedButton}"
                                              Height="40"
                                              Margin="0,0,10,0"
                                              Padding="25,0"/>

                                        <Button Command="{Binding AcceptInstallationCommand}"
                                              Style="{StaticResource MaterialDesignRaisedButton}"
                                              Height="40"
                                              Padding="25,0"
                                              Background="#4CAF50">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Download"
                                                                       Width="20"
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Download &amp; Install" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>