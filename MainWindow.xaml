<Window x:Class="InazumaElevenVRSaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InazumaElevenVRSaveEditor"
        xmlns:memoryEditorViews="clr-namespace:InazumaElevenVRSaveEditor.Features.MemoryEditor.Views"
        xmlns:updatesViews="clr-namespace:InazumaElevenVRSaveEditor.Features.Updates.Views"
        Title="Inazuma Eleven VR - Save Editor"
        Icon="pack://application:,,,/icon.ico"
        Height="1000"
        Width="1475"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        StateChanged="Window_StateChanged"
        LocationChanged="Window_LocationChanged">

    <Window.Resources>
        <!-- Ring Gradient for Theme Transition - hides old theme in expanding circle -->
        <RadialGradientBrush x:Key="RingMaskBrush"
                            x:Name="RingMask"
                            GradientOrigin="0.5,0.5"
                            Center="0.5,0.5"
                            RadiusX="3.0"
                            RadiusY="3.0"
                            MappingMode="RelativeToBoundingBox"
                            SpreadMethod="Pad">
            <GradientStop Color="Transparent" Offset="0"/>
            <GradientStop x:Name="InnerEdge" Color="Transparent" Offset="0"/>
            <GradientStop x:Name="OuterEdge" Color="Black" Offset="0.05"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>
    </Window.Resources>

    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Loading Screen Overlay -->
            <Grid x:Name="LoadingScreenOverlay"
                  Grid.RowSpan="3"
                  Panel.ZIndex="9999"
                  Visibility="Visible">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF1E3A8A" Offset="0"/>
                        <GradientStop Color="#FF3B82F6" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Animated Card Image Area -->
                    <Viewbox Grid.Row="1" Width="120" Height="120" Margin="0,0,0,20">
                        <Image x:Name="LoadingCardImage"
                              Stretch="Uniform"
                              RenderTransformOrigin="0.5,0.5">
                            <Image.Effect>
                                <DropShadowEffect x:Name="LoadingCardGlow"
                                                Color="#FFD700"
                                                BlurRadius="25"
                                                ShadowDepth="0"
                                                Opacity="0.9"/>
                            </Image.Effect>
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="LoadingCardScale" ScaleX="1" ScaleY="1"/>
                                    <RotateTransform x:Name="LoadingCardRotate" Angle="0"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Viewbox>

                    <!-- Loading Text -->
                    <TextBlock Grid.Row="2"
                              Text="INAZUMA ELEVEN VR - SAVE EDITOR"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>

                    <!-- Progress Bar -->
                    <Grid Grid.Row="3" Margin="50,0" MaxWidth="700">
                        <Border Height="14"
                               Background="#22FFFFFF"
                               CornerRadius="7"/>
                        <Border x:Name="LoadingProgressBar"
                               Height="14"
                               Width="0"
                               HorizontalAlignment="Left"
                               CornerRadius="7">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FFD700" Offset="0"/>
                                    <GradientStop Color="#FFA500" Offset="0.5"/>
                                    <GradientStop Color="#FFD700" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#FFD700"
                                                BlurRadius="15"
                                                ShadowDepth="0"
                                                Opacity="0.8"/>
                            </Border.Effect>
                        </Border>
                    </Grid>

                    <!-- Loading Status Text -->
                    <TextBlock x:Name="LoadingStatusText"
                              Grid.Row="4"
                              Text="Initializing..."
                              FontSize="13"
                              Foreground="#AAFFFFFF"
                              HorizontalAlignment="Center"
                              Margin="0,12,0,0"/>

                    <!-- Warning Message -->
                    <Border Grid.Row="5"
                           Background="#40DC143C"
                           BorderBrush="#FFDC143C"
                           BorderThickness="2"
                           CornerRadius="8"
                           Padding="15,12"
                           Margin="30,20,30,0"
                           HorizontalAlignment="Center"
                           MaxWidth="850">
                        <StackPanel HorizontalAlignment="Center">
                            <!-- Line 1: Icon + WARNING -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <materialDesign:PackIcon Kind="AlertCircle"
                                                       Width="26"
                                                       Height="26"
                                                       Foreground="#FFFF4444"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center">
                                    <Run Text="WARNING" Foreground="#FFFF4444"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Line 2 -->
                            <TextBlock FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"
                                      TextAlignment="Center" Margin="0,2,0,0">
                                <Run Text="This application is completely free." Foreground="#FFFF4444"/>
                            </TextBlock>

                            <!-- Line 3 -->
                            <TextBlock FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"
                                      TextAlignment="Center" Margin="0,2,0,0">
                                <Run Text="If you paid for it, you were scammed." Foreground="#FFFF4444"/>
                            </TextBlock>

                            <!-- Line 4 -->
                            <TextBlock FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"
                                      TextAlignment="Center" Margin="0,2,0,0">
                                <Run Text="Download the original version " Foreground="#FFFF4444"/>
                                <Hyperlink NavigateUri="https://gamebanana.com/tools/21299"
                                          RequestNavigate="Hyperlink_RequestNavigate"
                                          Foreground="#FF66B3FF"
                                          TextDecorations="Underline">
                                    <Run Text="HERE"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Theme Transition Overlay - shows static snapshot of old theme outside ring -->
            <Grid x:Name="ThemeTransitionOverlay"
                  Grid.RowSpan="3"
                  Panel.ZIndex="1000"
                  IsHitTestVisible="False"
                  Visibility="Collapsed"
                  OpacityMask="{StaticResource RingMaskBrush}">
                <Image x:Name="OldThemeSnapshot"
                       Stretch="None"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
            </Grid>

            <!-- Main Content Container -->
            <Grid x:Name="MainContent" Grid.RowSpan="3" ClipToBounds="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <materialDesign:ColorZone Mode="PrimaryMid"
                                         Padding="16"
                                         materialDesign:ElevationAssist.Elevation="Dp4"
                                         MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <materialDesign:PackIcon Kind="ContentSave"
                                                   Width="32"
                                                   Height="32"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="INAZUMA ELEVEN VR - SAVE EDITOR"
                                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Save Editor &amp; Cheat Menu"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.8"
                                             Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding CurrentVersion}"
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>

                <!-- Floating Buttons -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0">
                    <!-- Dev Info Button -->
                    <Button x:Name="DevButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="About the Developer"
                            Click="DevButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="Transparent"
                            BorderBrush="White"
                            BorderThickness="2"
                            Padding="0">
                        <Button.Clip>
                            <EllipseGeometry Center="25,25" RadiusX="23" RadiusY="23"/>
                        </Button.Clip>
                        <Image Source="pack://application:,,,/Resources/Logos/Dev.png"
                               Stretch="UniformToFill"
                               Width="50"
                               Height="50"/>
                    </Button>

                    <!-- GameBanana Logo Button -->
                    <Button x:Name="GameBananaButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Download from GameBanana"
                            Click="GameBananaButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="Transparent"
                            BorderBrush="White"
                            BorderThickness="2">
                        <Image Source="pack://application:,,,/Resources/Logos/Gamebanana.png"
                               Stretch="Uniform"
                               Width="40"
                               Height="40"/>
                    </Button>

                    <!-- Ko-Fi Logo Button -->
                    <Button x:Name="KoFiButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Support on Ko-Fi"
                            Click="KoFiButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="Transparent"
                            BorderBrush="White"
                            BorderThickness="2">
                        <Image Source="pack://application:,,,/Resources/Logos/Ko-Fi.png"
                               Stretch="Uniform"
                               Width="40"
                               Height="40"/>
                    </Button>

                    <Button x:Name="SettingsButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Settings"
                            Click="SettingsButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="{DynamicResource SecondaryHueMidBrush}">
                        <materialDesign:PackIcon Kind="Cog" Width="26" Height="26"/>
                    </Button>
                    <Button x:Name="ThemeToggleButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Toggle Theme"
                            Click="ThemeToggleButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="{DynamicResource SecondaryHueMidBrush}">
                        <materialDesign:PackIcon x:Name="ThemeIcon" Kind="WeatherSunny" Width="26" Height="26"/>
                    </Button>
                    <Button x:Name="CloseButton"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Close Application"
                            Click="CloseButton_Click"
                            Margin="5,0"
                            Width="50"
                            Height="50"
                            Background="#D32F2F">
                        <materialDesign:PackIcon Kind="Close" Width="26" Height="26"/>
                    </Button>
                </StackPanel>

                <!-- Settings Popup Menu -->
                <Popup x:Name="SettingsPopup"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=SettingsButton}"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    <Border Background="{DynamicResource MaterialDesignPaper}"
                            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                            BorderThickness="2"
                            CornerRadius="5"
                            Padding="10"
                            materialDesign:ElevationAssist.Elevation="Dp8">
                        <StackPanel>
                            <CheckBox x:Name="LoadingScreenCheckBox"
                                     Content="Show Loading Screen"
                                     Checked="LoadingScreenCheckBox_Changed"
                                     Unchecked="LoadingScreenCheckBox_Changed"
                                     Margin="5"
                                     Style="{StaticResource MaterialDesignCheckBox}"/>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Developer Info Popup -->
                <Popup x:Name="DevInfoPopup"
                       Placement="Center"
                       AllowsTransparency="True"
                       StaysOpen="True"
                       Opened="DevInfoPopup_Opened"
                       Closed="DevInfoPopup_Closed">
                    <Grid>
                        <!-- Background overlay to capture clicks outside -->
                        <Rectangle Fill="Transparent"
                                  Width="10000"
                                  Height="10000"
                                  MouseDown="PopupBackground_MouseDown"/>

                        <Border x:Name="PopupBorder"
                                Background="{DynamicResource MaterialDesignPaper}"
                                BorderBrush="Gray"
                                BorderThickness="4"
                                CornerRadius="12"
                                Padding="30"
                                materialDesign:ElevationAssist.Elevation="Dp16"
                                MinWidth="400"
                                Opacity="1"
                                RenderTransformOrigin="0.5,0.5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="PopupScale" ScaleX="0.01" ScaleY="0.01"/>
                                    <TranslateTransform x:Name="PopupTranslate" X="0" Y="-500"/>
                                </TransformGroup>
                            </Border.RenderTransform>
                        <StackPanel HorizontalAlignment="Center">
                            <!-- Dev Image (Circular) -->
                            <Ellipse Width="120" Height="120" Margin="0,0,0,20">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Resources/Logos/Dev.png" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Title Text -->
                            <TextBlock FontSize="16"
                                      FontWeight="SemiBold"
                                      TextAlignment="Center"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,10">
                                <Run Text="This tool is created by "/>
                                <Hyperlink NavigateUri="https://gamebanana.com/members/4911517"
                                          RequestNavigate="Hyperlink_RequestNavigate"
                                          Foreground="{DynamicResource PrimaryHueMidBrush}"
                                          TextDecorations="Underline">
                                    <Run Text="An Average Developer" FontWeight="Bold"/>
                                </Hyperlink>
                            </TextBlock>

                            <!-- Find Me Text -->
                            <TextBlock Text="You can find me here:"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      TextAlignment="Center"
                                      Margin="0,10,0,15"/>

                            <!-- Social Media Links -->
                            <StackPanel Orientation="Horizontal"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10">
                                <!-- Instagram Button -->
                                <Button Click="InstagramButton_Click"
                                       Margin="10,0"
                                       Width="60"
                                       Height="60"
                                       Cursor="Hand"
                                       Style="{StaticResource MaterialDesignFloatingActionButton}"
                                       ToolTip="Instagram: @agoosto__">
                                    <Image Source="pack://application:,,,/Resources/Logos/Instagram.png"
                                          Stretch="Uniform"
                                          Width="45"
                                          Height="45"/>
                                </Button>

                                <!-- Discord Button -->
                                <Button Click="DiscordButton_Click"
                                       Margin="10,0"
                                       Width="60"
                                       Height="60"
                                       Cursor="Hand"
                                       Style="{StaticResource MaterialDesignFloatingActionButton}"
                                       ToolTip="Discord">
                                    <Image Source="pack://application:,,,/Resources/Logos/Discord.png"
                                          Stretch="Uniform"
                                          Width="45"
                                          Height="45"/>
                                </Button>
                            </StackPanel>

                            <!-- Close Button -->
                            <Button Content="Close"
                                   Click="CloseDevPopup_Click"
                                   Margin="0,15,0,0"
                                   Style="{StaticResource MaterialDesignFlatButton}"
                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                        </Border>
                    </Grid>
                </Popup>
            </Grid>

            <!-- Main Content -->
            <TabControl Grid.Row="1"
                       Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                       materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                       Margin="0"
                       TabStripPlacement="Left">

                <!-- Memory Editor Tab -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="80" Margin="4">
                            <materialDesign:PackIcon Kind="Memory"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Cheat&#x0a;Menu"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="10"
                                     LineHeight="12"/>
                        </StackPanel>
                    </TabItem.Header>

                    <Grid Margin="20">
                        <!-- Tool Selection Menu -->
                        <memoryEditorViews:ToolSelectionMenuControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=menu}"
                            DataContext="{Binding}"/>

                        <!-- Stars Editor View -->
                        <memoryEditorViews:StarsEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=tickets}"
                            DataContext="{Binding}"/>

                        <!-- Ina Flowers Editor View -->
                        <memoryEditorViews:InaFlowersEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=inaflowers}"
                            DataContext="{Binding}"/>

                        <!-- Spirit Cards Adder View (replaces old Spirits Editor) -->
                        <memoryEditorViews:SpiritCardsAdderControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=spiritcards}"
                            DataContext="{Binding}"/>

                        <!-- Player Spirits Adder View -->
                        <memoryEditorViews:PlayerSpiritsAdderControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=playerspirits}"
                            DataContext="{Binding}"/>

                        <!-- Beans Editor View -->
                        <memoryEditorViews:BeansEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=beans}"
                            DataContext="{Binding}"/>

                        <!-- Victory Items Editor View -->
                        <memoryEditorViews:VictoryItemsEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=victoryitems}"
                            DataContext="{Binding}"/>

                        <!-- Items List View -->
                        <memoryEditorViews:ItemListControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=itemslist}"
                            DataContext="{Binding}"/>

                        <!-- Passive Values Editor View -->
                        <memoryEditorViews:PassiveValuesEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=passivevalues}"
                            DataContext="{Binding}"/>

                        <!-- Special Moves Editor View -->
                        <memoryEditorViews:SpecialMovesEditorControl
                            Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=specialmoves}"
                            DataContext="{Binding}"/>

                        <!-- Tutorials View -->
                        <ContentControl Visibility="{Binding MemoryEditor.SelectedTool, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=tutorials}">
                            <memoryEditorViews:TutorialsControl DataContext="{Binding MemoryEditor.TutorialsViewModel}"/>
                        </ContentControl>
                    </Grid>
                </TabItem>

                <!-- Updates Tab -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="80" Margin="4">
                            <materialDesign:PackIcon Kind="CloudDownload"
                                                   Width="20"
                                                   Height="20"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                            <TextBlock Text="Updates"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="10"
                                     LineHeight="12"/>
                        </StackPanel>
                    </TabItem.Header>

                    <updatesViews:UpdatesTabControl DataContext="{Binding}"/>
                </TabItem>
            </TabControl>

            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
